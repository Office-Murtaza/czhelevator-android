<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/spacing_four"
    android:paddingBottom="@dimen/spacing_four">

    <!--<ImageView-->
    <!--android:id="@+id/tab_icon"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="0dp"-->
    <!--android:layout_weight="1"-->
    <!--android:scaleType="centerInside" />-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipChildren="false"
        android:clipToPadding="false">

        <ImageView
            android:id="@+id/tab_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            tools:src="@drawable/img_default_avatar"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/tv_msg_num"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_alignRight="@id/tab_icon"
            android:layout_alignTop="@id/tab_icon"
            android:background="@drawable/bg_red_msg_num"
            android:gravity="center"
            android:layout_marginRight="14dp"
            android:minWidth="16dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone"
            android:textColor="@color/white_normal"
            android:textSize="@dimen/txt_small"
            tools:text="8" />

        <TextView
            android:id="@+id/tv_msg_dot"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignRight="@id/tab_icon"
            android:layout_alignTop="@id/tab_icon"
            android:layout_marginTop="-3dp"
            android:layout_marginRight="-6dp"
            android:background="@drawable/bg_red_msg_num"
            android:gravity="center"
            android:textColor="@color/white_normal"
            android:textSize="@dimen/txt_small"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tab_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_normal"
        android:textSize="@dimen/txt_tips" />
</LinearLayout>