<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="normal_dialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="normal_dialog.white">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="normal_dialog.black">
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="BL_PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bl_dialog_open</item>
        <item name="android:windowExitAnimation">@anim/bl_dialog_close</item>
    </style>

    <style name="BL_Animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/ui_right_in</item>
        <item name="android:windowExitAnimation">@anim/af_right_out</item>
    </style>

    <style name="ScanleAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bl_dialog_open</item>
        <item name="android:windowExitAnimation">@anim/af_right_out</item>
    </style>
</resources>