<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowSoftInputMode">adjustResize|stateAlwaysHidden</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="NoTitle_FullScreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="text_normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_normal_content</item>
        <item name="android:textColor">@color/black_normal</item>
    </style>

    <style name="text_normal.secondary">
        <item name="android:textColor">@color/black_secondary</item>
    </style>

    <style name="text_big_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_big_content</item>
        <item name="android:textColor">@color/black_normal</item>
    </style>

    <style name="text_big_content.secondary">
        <item name="android:textColor">@color/black_secondary</item>
    </style>

    <style name="layout_padding">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/spacing_twelve</item>
        <item name="android:paddingBottom">@dimen/spacing_twelve</item>
        <item name="android:paddingLeft">@dimen/spacing_default</item>
        <item name="android:paddingRight">@dimen/spacing_default</item>
    </style>

    <style name="layout_padding_small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/spacing_small</item>
        <item name="android:paddingBottom">@dimen/spacing_small</item>
        <item name="android:paddingLeft">@dimen/spacing_twelve</item>
        <item name="android:paddingRight">@dimen/spacing_twelve</item>
    </style>

    <style name="layout_padding_very_small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/spacing_four</item>
        <item name="android:paddingBottom">@dimen/spacing_four</item>
        <item name="android:paddingLeft">@dimen/spacing_small</item>
        <item name="android:paddingRight">@dimen/spacing_small</item>
    </style>

    <style name="AppThemeProgress">
        <item name="colorAccent">@color/colorAccent</item> <!-- Whatever color you want-->
    </style>

    <style name="normal_dialog.question" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/ui_white_corner_bg</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MyDialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_begin_normal</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="NoTitleDialogTheme" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowAnimationStyle">@style/view_component_bottom_animation</item>
    </style>

    <style name="view_component_bottom_animation">
        <item name="android:activityOpenEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:activityOpenExitAnimation">@anim/no_change_default</item>
        <item name="android:activityCloseEnterAnimation">@anim/no_change_default</item>
        <item name="android:activityCloseExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="BottomSheetEdit" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>


    <!-- 自定义动画样式 -->
    <style name='fade' parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/act_fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/act_fade_stay</item>
        <item name="android:activityCloseEnterAnimation">@anim/act_fade_stay</item>
        <item name="android:activityCloseExitAnimation">@anim/act_fade_out</item>
    </style>


<!--    //主题-->
    <style name="NextTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Tabtext">
        <item name="android:textColor">@color/selector_tab_text</item>
        <item name="android:textSize">@dimen/sp_14</item>

    </style>


    <style name="adStyleTabtext">
        <item name="android:textColor">@color/ad_style_tab_text</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:background">@drawable/ad_style_bj</item>
    </style>


    <style name="mProgressBarStyle" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dp</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
    </style>

</resources>