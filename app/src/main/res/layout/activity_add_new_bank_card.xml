<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".uis.activities.cooperation.AddNewBankCardActivity">

    <com.kingyon.elevator.customview.MyActionBar
        android:id="@+id/my_action_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:title="添加账户" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_action_bar"
        android:layout_marginStart="36dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="36dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="账户类型"
                android:textColor="@color/default_text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_account_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="85dp"
                android:gravity="center_vertical"
                android:text="支付宝提现"
                android:textColor="@color/hint_text_color"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#7F7F7F" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="账号"
                android:textColor="@color/default_text_color"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/tv_zfb_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="85dp"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="请输入支付宝账号"
                android:textColor="@color/hint_text_color"
                android:textColorHint="@color/hint_text_color"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#7F7F7F" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="姓名"
                android:textColor="@color/default_text_color"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/tv_zfb_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="85dp"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="请输入支付宝绑定的真实姓名"
                android:textColor="@color/hint_text_color"
                android:textColorHint="@color/hint_text_color"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#7F7F7F" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/kaihuhang_container"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="开户行"
                android:textColor="@color/default_text_color"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/tv_bank_card_kaihuhang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="85dp"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="请输入银行卡开户行"
                android:textColor="@color/hint_text_color"
                android:textColorHint="@color/hint_text_color"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#7F7F7F" />

        </RelativeLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_confirm_bind"
        android:layout_width="302dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="133dp"
        android:background="@drawable/shape_bg_default_btn"
        android:gravity="center"
        android:text="确定"
        android:textColor="#ffffffff"
        android:textSize="15sp" />


    <TextView
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:text="@string/bind_card_tips"
        android:textColor="@color/default_text_color"
        android:textSize="10sp" />
</RelativeLayout>