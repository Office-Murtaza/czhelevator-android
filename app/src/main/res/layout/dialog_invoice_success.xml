<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_normal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="@dimen/spacing_default"
        android:src="@drawable/ic_dialog_close_gray" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-16dp"
        android:src="@drawable/img_invoice_success" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/spacing_twenty_four"
        android:layout_marginTop="@dimen/spacing_twenty_four"
        android:text="提交成功"
        android:textColor="#333333"
        android:textSize="@dimen/txt_sub_title"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/spacing_default"
        android:layout_marginRight="@dimen/spacing_default"
        android:lineSpacingMultiplier="1.1"
        android:text="您的发票开具申请已经提交，工作人员将在1-3个工作日内（节假日顺延），将发票发送至您填写的电子邮箱中。"
        android:textColor="#ABABAB"
        android:textSize="@dimen/txt_normal_content"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_ensure"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginBottom="@dimen/spacing_thirty_two"
        android:layout_marginLeft="@dimen/spacing_tab_bar"
        android:layout_marginRight="@dimen/spacing_tab_bar"
        android:layout_marginTop="@dimen/spacing_thirty_two"
        android:background="@drawable/bg_six_btn"
        android:gravity="center"
        android:text="知道了"
        android:textColor="#ffffffff"
        android:textSize="@dimen/txt_big_content"
        android:textStyle="bold" />
</LinearLayout>