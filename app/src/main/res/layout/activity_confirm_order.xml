<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".uis.activities.order.ConfirmOrderActivity">

    <com.kingyon.elevator.customview.MyActionBar
        android:id="@+id/my_action_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:title="确认订单" />

    <com.leo.afbaselibrary.widgets.StateLayout
        android:id="@+id/stateLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_action_bar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="75dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="28dp"
                    android:paddingEnd="28dp">

                    <RelativeLayout
                        android:id="@+id/ad_name_container"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_marginTop="20dp">

                        <EditText
                            android:id="@+id/et_input_ad_name"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginEnd="80dp"
                            android:background="@color/white"
                            android:hint="请输入广告名称"
                            android:maxLength="20"
                            android:textColor="@color/default_text_color"
                            android:textColorHint="#7F7F7F"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/ad_img_preview"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_alignParentEnd="true"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/ic_launcher"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tv_ad_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/shape_ad_type_bg"
                            android:padding="1dp"
                            android:text="商业广告"
                            android:textColor="#ffeb7a12"
                            android:textSize="15sp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/information_name_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/et_input_information"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="40dp"
                            android:background="@color/white"
                            android:gravity="top"
                            android:hint="请输入您想投放的便民信息内容~"
                            android:maxLength="60"
                            android:minHeight="45dp"
                            android:textColor="@color/default_text_color"
                            android:textColorHint="#7F7F7F"
                            android:textSize="18sp"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/information_img_tips"
                            android:layout_width="23dp"
                            android:layout_height="27dp"
                            android:layout_alignParentEnd="true"
                            android:src="@mipmap/querendingdan_wenzitubiao"
                            android:visibility="visible" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/et_input_information"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/shape_ad_type_bg"
                            android:padding="1dp"
                            android:text="便民信息"
                            android:textColor="#ffeb7a12"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/input_count_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/et_input_information"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="10dp"
                            android:text="最多输入60字/符"
                            android:textColor="#ff7f7f7f"
                            android:textSize="15sp"
                            android:visibility="visible" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="59.5dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/shape_ad_select_date_bg">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="9dp"
                            android:layout_marginTop="9dp"
                            android:text="投放时间"
                            android:textColor="#ff404040"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:id="@+id/select_date_container"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="3dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp">

                            <TextView
                                android:id="@+id/tv_start_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="12月15日"
                                android:textColor="#ffeb7a12"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tv_start_date_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="(今天)"
                                android:textColor="#ff404040"
                                android:textSize="14sp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="2dp"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"
                                android:layout_weight="1"
                                android:background="#7F7F7F" />

                            <TextView
                                android:id="@+id/tv_end_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="12月15日"
                                android:textColor="#ffeb7a12"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tv_end_date_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="(今天)"
                                android:textColor="#7F7F7F"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp"
                        android:text="投放成功后，系统将为您预留点位"
                        android:textColor="#ff7f7f7f"
                        android:textSize="15sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="25dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="投放点位"
                            android:textColor="#ff404040"
                            android:textSize="19sp" />

                        <TextView
                            android:id="@+id/tv_all_screen_count"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:gravity="center"
                            android:text="共1个小区1面屏"
                            android:textColor="#ff7f7f7f"
                            android:textSize="15sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="优惠"
                            android:textColor="#ff404040"
                            android:textSize="19sp" />

                        <TextView
                            android:id="@+id/tv_discount_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:gravity="center"
                            android:text="已为您选择最大优惠"
                            android:textColor="#EB7A12"
                            android:textSize="15sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="促销活动"
                            android:textColor="#ff404040"
                            android:textSize="19sp" />

                        <TextView
                            android:id="@+id/cuxiao_manjian"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:gravity="center"
                            android:text="立减0元"
                            android:textColor="#EB7A12"
                            android:textSize="15sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="优惠券"
                            android:textColor="#ff404040"
                            android:textSize="19sp" />

                        <TextView
                            android:id="@+id/tv_youhuiquan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="80dp"
                            android:gravity="center_vertical|right"
                            android:minHeight="30dp"
                            android:text="满0减100元"
                            android:textColor="#7F7F7F"
                            android:textSize="15sp" />

                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="4dp"
                        android:background="#BFBFBF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="投放说明"
                        android:textColor="#ff404040"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:lineSpacingExtra="2dp"
                        android:text="@string/toufang_shuoming"
                        android:textColor="#ff7f7f7f"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:text="退款说明"
                        android:textColor="#ff404040"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:lineSpacingExtra="2dp"
                        android:text="@string/tuikuan_shuoming"
                        android:textColor="#ff7f7f7f"
                        android:textSize="15sp" />


                </LinearLayout>
            </ScrollView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_alignParentBottom="true"
                android:paddingStart="28dp"
                android:paddingEnd="28dp">

                <TextView
                    android:id="@+id/tv_order_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="¥0元"
                    android:textColor="#ffeb7a12"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_discount_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_order_money"
                    android:text="已优惠0元"
                    android:textColor="#ff404040"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/tv_cat_order_detailed"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:layout_toStartOf="@+id/tv_go_pay"
                    android:drawableEnd="@mipmap/suoyoushiping_xiangxiaanniu"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="明细"
                    android:textColor="#ff404040"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_go_pay"
                    android:layout_width="94dp"
                    android:layout_height="42dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_six_btn"
                    android:enabled="true"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="去支付"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/txt_big_content"
                    android:textStyle="bold" />

            </RelativeLayout>
        </RelativeLayout>
    </com.leo.afbaselibrary.widgets.StateLayout>
</RelativeLayout>