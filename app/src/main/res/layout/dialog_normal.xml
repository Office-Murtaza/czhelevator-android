<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="@dimen/spacing_small"
        android:layout_marginRight="@dimen/spacing_small"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/spacing_tab_bar"
            android:layout_marginLeft="@dimen/spacing_twelve"
            android:layout_marginRight="@dimen/spacing_twelve"
            android:layout_weight="1"
            android:background="@drawable/bg_cancel_btn"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/white_normal"
            android:textSize="@dimen/txt_big_content"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_ensure"
            android:layout_width="0dp"
            android:layout_height="@dimen/spacing_tab_bar"
            android:layout_marginLeft="@dimen/spacing_twelve"
            android:layout_marginRight="@dimen/spacing_twelve"
            android:layout_weight="1"
            android:background="@drawable/bg_six_btn"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/white_normal"
            android:textSize="@dimen/txt_big_content"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>