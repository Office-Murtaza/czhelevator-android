<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="26dp"
    android:background="@drawable/white_round_4"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.kingyon.elevator.uis.widgets.ProportionFrameLayout
        android:id="@+id/img_decrease"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@mipmap/btn_reduce"
        android:layout_marginRight="@dimen/dp10"
        app:proporty="1">

    </com.kingyon.elevator.uis.widgets.ProportionFrameLayout>



    <EditText
        android:id="@+id/ed_input"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@null"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="9"
        android:minWidth="26sp"
        android:text="0"
        android:textColor="#FF333333"
        android:textSize="@dimen/txt_big_content" />


    <com.kingyon.elevator.uis.widgets.ProportionFrameLayout
        android:id="@+id/img_increase"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@mipmap/btn_add"
        android:layout_marginLeft="@dimen/dp10"
        app:proporty="1">


    </com.kingyon.elevator.uis.widgets.ProportionFrameLayout>
</LinearLayout>