<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="26dp"
    android:background="@drawable/white_round_4"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.kingyon.elevator.uis.widgets.ProportionFrameLayout
        android:id="@+id/img_decrease"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:proporty="1">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_decrease_shape_up" />
    </com.kingyon.elevator.uis.widgets.ProportionFrameLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/black_divider" />

    <EditText
        android:id="@+id/ed_input"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@null"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="9"
        android:minWidth="26sp"
        android:text="0"
        android:textColor="#FF333333"
        android:textSize="@dimen/txt_big_content" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/black_divider" />

    <com.kingyon.elevator.uis.widgets.ProportionFrameLayout
        android:id="@+id/img_increase"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:proporty="1">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_decrease_shape_up" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_increase_shape_up" />
    </com.kingyon.elevator.uis.widgets.ProportionFrameLayout>
</LinearLayout>