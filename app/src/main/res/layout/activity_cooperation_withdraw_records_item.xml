<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_normal"
    android:orientation="horizontal"
    android:paddingBottom="15dp"
    android:paddingTop="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/spacing_default"
        android:visibility="gone"
        android:paddingRight="@dimen/spacing_default">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:textSize="@dimen/txt_normal_content"
            android:textStyle="bold"
            tools:text="2018/05/01 15:00" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:textSize="@dimen/txt_normal_content"
            android:textStyle="bold"
            tools:text="审核中" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#ffec7a12"
                android:textSize="@dimen/txt_sub_title"
                android:textStyle="bold"
                tools:text="100.00" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="#333333"
                android:textSize="@dimen/txt_normal_content"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical|left"
        android:paddingLeft="@dimen/spacing_default"
        android:paddingRight="@dimen/spacing_default"
        android:textColor="#ABABAB"
        android:textSize="@dimen/txt_tips"
        tools:text="失败原因：银行卡信息错误" />


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝提现"
            android:textColor="#ff333333"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现账户：187****5643"
            android:textColor="#ff999999"
            android:textSize="12sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现时间：2020-04-12   12：23"
            android:textColor="#ff999999"
            android:textSize="12sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审核状态：通过"
            android:textColor="#ff999999"
            android:textSize="12sp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="128.00"
            android:textColor="#ff333333"
            android:textSize="18sp"
            />

        <TextView
            android:layout_marginTop="@dimen/dp5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="（扣税4.00）"
            android:textColor="#ff999999"
            android:textSize="12sp"
            />



    </LinearLayout>


</LinearLayout>