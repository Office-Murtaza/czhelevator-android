<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp10"
    android:background="@drawable/bg_bj"
    >

    <TextView
        android:layout_width="24dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#CFCFCF"
        android:gravity="center"
        android:paddingTop="15dp"
        android:textColor="@color/black_normal"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_marginTop="@dimen/dp10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="世纪城龙吉苑共2面屏···¥40"
        android:textColor="#ff333333"
        android:textSize="15sp"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/tv_pay_time"
        android:layout_marginTop="@dimen/dp10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="剩余支付时间   0：59"
        android:textColor="#ff2d6ef2"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_5"
        android:paddingTop="@dimen/dp_5"
        android:paddingRight="@dimen/dp_20"
        android:textSize="14sp"
        android:background="@drawable/ad_pay_time"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付方式"
        android:textColor="#ff666666"
        android:textSize="12sp"
        />

    <LinearLayout
        android:id="@+id/ll_balance"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_pay_tcoin"
            ></ImageView>

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T币（¥200可用）"
            android:textColor="#ff333333"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/dp10"
            />

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_balance"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ad_pay_xz"
            android:saveEnabled="true"
            />
<!--setSelected-->
    </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1E1E1"/>

    <LinearLayout
        android:id="@+id/ll_wechat"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_pay_wechat"
            ></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信"
            android:textColor="#ff333333"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/dp10"
            />

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_wechat"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ad_pay_xz"
            />

    </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1E1E1"/>

    <LinearLayout
        android:id="@+id/tv_alipay"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_pay_alipay"
            ></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝"
            android:textColor="#ff333333"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/dp10"
            />

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_alipay"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ad_pay_xz"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="@dimen/dp_160"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="#ff666666"
            android:textSize="15sp"
            android:gravity="center"
            android:paddingTop="@dimen/dp10"
            android:paddingBottom="@dimen/dp10"
            android:background="@drawable/ad_pay_cancel"
            />

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_payment"
            android:layout_width="@dimen/dp_160"
            android:layout_height="wrap_content"
            android:text="付款"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:paddingTop="@dimen/dp10"
            android:paddingBottom="@dimen/dp10"
            android:textSize="15sp"
            android:background="@drawable/ad_pay_payment"

            />


    </LinearLayout>
</LinearLayout>