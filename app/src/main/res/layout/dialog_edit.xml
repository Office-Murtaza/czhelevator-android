<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout_padding"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/spacing_twelve"
            android:layout_marginTop="@dimen/spacing_small"
            android:gravity="center_horizontal"
            android:text="tv_title"
            android:textColor="#333333"
            android:textSize="@dimen/txt_sub_title"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/spacing_twelve"
            android:src="@drawable/ic_dialog_close" />
    </RelativeLayout>

    <EditText
        android:id="@+id/et_content"
        style="@style/text_big_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_tab_bar"
        android:layout_marginBottom="@dimen/spacing_twelve"
        android:layout_marginTop="@dimen/spacing_small"
        android:background="@drawable/bg_dialog_edit"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:inputType="text"
        android:maxLines="3"
        android:minLines="3"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textColor="#333333"
        android:textColorHint="#999999"
        android:textCursorDrawable="@drawable/cousor_accent"
        android:textStyle="bold"
        tools:hint="输入内容" />
</LinearLayout>