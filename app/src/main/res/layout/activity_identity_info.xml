<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_normal"
    android:orientation="vertical">

    <include layout="@layout/layout_header" />

    <include layout="@layout/ui_layout_divider" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="@dimen/spacing_eighty"
        android:src="@drawable/img_auth" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/spacing_small"
        android:paddingRight="@dimen/spacing_small">

        <TextView
            android:id="@+id/tv_auth_person"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/spacing_small"
            android:layout_marginRight="@dimen/spacing_small"
            android:layout_weight="1"
            android:background="@drawable/bg_cancel_btn"
            android:gravity="center"
            android:text="个人认证"
            android:textColor="#ffffffff"
            android:textSize="@dimen/txt_big_content"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_auth_company"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/spacing_small"
            android:layout_marginRight="@dimen/spacing_small"
            android:layout_weight="1"
            android:background="@drawable/bg_six_btn"
            android:gravity="center"
            android:text="企业认证"
            android:textColor="#ffffffff"
            android:textSize="@dimen/txt_big_content"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>