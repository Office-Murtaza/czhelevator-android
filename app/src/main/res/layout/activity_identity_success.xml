<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_normal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <include layout="@layout/layout2_top" />


        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_cashout_apply"
            android:layout_gravity="center"
            android:padding="@dimen/dp10"
            />

        <TextView
            android:id="@+id/tv_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人认证已通过！"
            android:textColor="#ff2d6ef2"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:padding="@dimen/dp10"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/dp20"
            android:background="@drawable/ad_top_introduce"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp10"
                >
                <TextView
                    android:id="@+id/tv_was"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="认证方式"
                    android:textColor="#ff666666"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/tv_zt"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="支付宝认证"
                    android:gravity="right"
                    android:textColor="#ff333333"
                    android:textSize="15sp"
                    />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_xd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="#e1e1e1"/>

            <LinearLayout
                android:id="@+id/ll_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp10"
                >
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="认证人"
                    android:textColor="#ff666666"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:gravity="right"
                    android:textColor="#ff333333"
                    android:textSize="15sp"
                    />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重新认证"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/btn_common_normal"
        android:layout_marginBottom="@dimen/dp_40"
        />

</RelativeLayout>