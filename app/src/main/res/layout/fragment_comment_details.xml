<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingStart="27dp"
    android:paddingEnd="27dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="9.5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_head"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/ic_launcher" />


        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/user_head"
            android:text="会飞的马尔扎哈"
            android:textColor="#444144"
            android:textSize="8sp" />


        <TextView
            android:id="@+id/comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@+id/user_head"
            android:text="23分钟前"
            android:textColor="#444144"
            android:textSize="8sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:drawableStart="@mipmap/details_paixutupiao"
            android:text="按热度排序"
            android:textColor="#B2B2B4"
            android:textSize="8sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:text="：华为牛逼！！！"
        android:textColor="#414143"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="全部评论（0条）"
        android:textColor="#ffeb7a12"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:background="#D0CDD0" />

    <ListView
        android:id="@+id/reply_list_container"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:divider="@color/transparent"
        android:dividerHeight="5dp"
        android:layout_height="match_parent"
        android:layout_marginTop="18dp" />

</LinearLayout>