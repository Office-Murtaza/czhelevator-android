<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
    <ImageView
        android:id="@+id/img_top_back1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_arrow_back"
        android:layout_centerVertical="true"
        android:padding="@dimen/dp_15"
        />

    <ImageView
        android:id="@+id/img_portrait1"
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp30"
        android:src="@mipmap/btn_add"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img_top_back1"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="哥曾经是传说"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_toRightOf="@+id/img_portrait1"
        android:textColor="#ff333333"
        android:textSize="16sp"
        />

    <ImageView
        android:id="@+id/img_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_personal_edit_black"
        android:layout_alignParentRight="true"
        android:padding="@dimen/dp_15"
        />
    <TextView
        android:id="@+id/tv_attention1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已关注"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_alignEnd="@+id/img_more1"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:paddingTop="@dimen/dp5"
        android:paddingBottom="@dimen/dp5"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_uesrcenter_attention1"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/img_more1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_comm_menu_black"
        android:layout_centerVertical="true"
        android:padding="@dimen/dp_15"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        ></ImageView>

    </RelativeLayout>


</RelativeLayout>

