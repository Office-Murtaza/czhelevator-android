<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_weight="1"
    android:id="@+id/ll_tab"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/id_tab01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/id_tab01_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="关注"
                android:textColor="@color/color_666666"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/id_tab_line1"
                android:layout_width="20dp"
                android:layout_marginTop="@dimen/dp5"
                android:layout_height="wrap_content"
                android:background="@mipmap/di_tab_line"
                android:visibility="gone"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_tab02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/id_tab02_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="推荐"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/id_tab_line2"
                android:layout_width="20dp"
                android:layout_marginTop="@dimen/dp5"
                android:layout_height="wrap_content"
                android:background="@mipmap/di_tab_line"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_tab03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/id_tab03_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="话题"
                android:textColor="@color/color_666666"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/id_tab_line3"
                android:layout_width="20dp"
                android:layout_marginTop="@dimen/dp5"
                android:layout_height="wrap_content"
                android:background="@mipmap/di_tab_line"
                android:visibility="gone"
                />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>