<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_130"
        android:src="@mipmap/im_puton_banner"
        android:scaleType="centerCrop"
        />

   <LinearLayout
       android:id="@+id/fl_title"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       >

       <LinearLayout
           android:id="@+id/ll_select_place"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center"
           android:paddingLeft="@dimen/dp10"
           android:paddingRight="@dimen/dp10"
           android:layout_margin="@dimen/dp10"
           android:paddingBottom="@dimen/dp5"
           android:paddingTop="@dimen/dp5"
           android:background="@drawable/ad_top_choose"
           >

           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@mipmap/ic_position_white"
               />
           <TextView
               android:id="@+id/tv_place"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="贵阳"
               android:layout_marginLeft="@dimen/dp5"
               android:textColor="#ffffffff"
               android:textSize="@dimen/sp_16"
               />

           <ImageView
               android:layout_width="@dimen/dp20"
               android:layout_height="@dimen/dp_20"
               android:src="@mipmap/ic_arrow_right_down_w"
               android:layout_marginLeft="@dimen/dp5"
               ></ImageView>



       </LinearLayout>

       <TextView
           android:layout_weight="1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>

       <LinearLayout
           android:id="@+id/ll_type"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center"
           android:layout_alignParentRight="true"
           android:paddingLeft="@dimen/dp10"
           android:paddingRight="@dimen/dp10"
           android:layout_margin="@dimen/dp10"
           android:paddingBottom="@dimen/dp5"
           android:paddingTop="@dimen/dp5"
           android:background="@drawable/ad_top_choose"
           >

           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@mipmap/ic_terminal_class"
               />
           <TextView
               android:id="@+id/tv_type_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="电梯广告"
               android:layout_marginLeft="@dimen/dp5"
               android:textColor="#ffffffff"
               android:textSize="@dimen/sp_16"
               />

           <ImageView
               android:layout_width="@dimen/dp20"
               android:layout_height="@dimen/dp_20"
               android:src="@mipmap/ic_arrow_right_down_w"
               android:layout_marginLeft="@dimen/dp5"
               ></ImageView>


       </LinearLayout>
   </LinearLayout>


    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smart_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fl_title"
        app:srlEnableAutoLoadMore="true"
        app:srlEnableRefresh="true">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:focusableInTouchMode="true"
                android:descendantFocusability="blocksDescendants"
                android:fillViewport="true"
                >

            <LinearLayout
                android:id="@+id/ll_js"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/fl_title"
                android:layout_margin="@dimen/sp_20"
                android:padding="@dimen/dp_15"
                android:background="@drawable/ad_top_introduce"
                >


                <TextView
                    android:id="@+id/tv_city_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="当前城市屏幕数量：0台"
                    android:textColor="#ffff3049"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="@dimen/dp10"
                    android:background="@drawable/ad_top_statistical"
                    ></TextView>


                <LinearLayout
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <RelativeLayout
                        android:id="@+id/rl_ll_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/im_pingduoduo"
                            android:scaleType="fitStart"
                            ></ImageView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            >


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="查看样式"
                                android:textColor="#fffc7a2c"
                                android:textSize="12sp"
                                />
                            <ImageView
                                android:layout_marginTop="@dimen/dp5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_view_style"
                                />

                        </LinearLayout>


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="fill"
                        android:layout_marginLeft="@dimen/dp10"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_5"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="投放终端："
                                android:textColor="#999999"
                                android:textSize="@dimen/sp_12"
                                />

                            <TextView
                                android:id="@+id/tv_terminal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#333333"
                                android:textSize="@dimen/sp_14"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_5"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="投放要求："
                                android:textColor="#999999"
                                android:textSize="@dimen/sp_12"
                                />

                            <TextView
                                android:id="@+id/tv_claim"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#333333"
                                android:textSize="@dimen/sp_14"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_5"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="投放时长："
                                android:textColor="#999999"
                                android:textSize="@dimen/sp_12"
                                />

                            <TextView
                                android:id="@+id/tv_duration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#333333"
                                android:textSize="@dimen/sp_14"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_5"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="曝光频次："
                                android:textColor="#999999"
                                android:textSize="@dimen/sp_12"
                                />

                            <TextView
                                android:id="@+id/tv_frequency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#333333"
                                android:textSize="@dimen/sp_14"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_5"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="投放方式："
                                android:textColor="#999999"
                                android:textSize="@dimen/sp_12"
                                />

                            <TextView
                                android:id="@+id/tv_way"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#333333"
                                android:textSize="@dimen/sp_14"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_5"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="广告时长："
                                android:textColor="#999999"
                                android:textSize="@dimen/sp_12"
                                />

                            <TextView
                                android:id="@+id/tv_ad_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#333333"
                                android:textSize="@dimen/sp_14"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_5"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="投放费用："
                                android:textColor="#999999"
                                android:textSize="@dimen/sp_12"
                                />

                            <TextView
                                android:id="@+id/tv_cost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#333333"
                                android:textSize="@dimen/sp_14"
                                />
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


                <TextView
                    android:id="@+id/tv_choose_point"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="选择投放点位"
                    android:textColor="#ffffffff"
                    android:textSize="15sp"
                    android:background="@drawable/ad_top_choose_point"
                    android:padding="@dimen/dp10"
                    android:gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tj"
                android:layout_below="@+id/ll_js"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp10"
                android:gravity="center"
                android:orientation="horizontal"
                >


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_site_recommend"
                    android:padding="@dimen/dp5"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="为您推荐"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/dp10"
                    />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

                <LinearLayout
                    android:id="@+id/ll_view_schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_site_list"
                        android:padding="@dimen/dp5"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看计划单"
                        android:textColor="#ff999999"
                        android:layout_marginLeft="@dimen/dp10"
                        android:textSize="@dimen/sp_14"
                        />

                    <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_arrow_right"
                    android:layout_marginLeft="@dimen/dp10"
                    ></ImageView>

                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_recommended"
                android:layout_below="@+id/ll_tj"
                android:layout_marginTop="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


                <include layout="@layout/layout_error"
                    android:visibility="gone"
                    />
                <include layout="@layout/layout_null"
                    android:visibility="gone"
                    />
        </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</RelativeLayout>