<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="投放点位"
            android:textColor="#ff404040"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/tv_all_screen_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:text="共1个小区1面屏"
            android:textColor="#ff7f7f7f"
            android:textSize="15sp" />

    </RelativeLayout>

    <TextView
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="#E1E1E1"/>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="优惠"
            android:textColor="#ff404040"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/tv_discount_desc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:text="已为您选择最大优惠"
            android:textColor="#2D6EF2"
            android:textSize="15sp" />

    </RelativeLayout>

    <TextView
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="#E1E1E1"/>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="促销活动"
            android:textColor="#ff404040"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/cuxiao_manjian"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:text="立减0元"
            android:textColor="#2D6EF2"
            android:textSize="15sp" />

    </RelativeLayout>

    <TextView
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="#E1E1E1"/>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="优惠券"
            android:textColor="#ff404040"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/tv_youhuiquan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="80dp"
            android:gravity="center_vertical|right"
            android:minHeight="30dp"
            android:text="满0减100元"
            android:drawableEnd="@mipmap/ic_arrow_right"
            android:textColor="#7F7F7F"
            android:textSize="15sp" />

    </RelativeLayout>

    <TextView
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="#E1E1E1"/>

</LinearLayout>