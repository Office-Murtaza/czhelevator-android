<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    tools:context=".uis.actiivty2.HomeActivity">


    <FrameLayout
        android:id="@+id/frame_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above ="@+id/ll_bottom"
        >
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="#e1e1e1"
        android:layout_above="@+id/ll_bottom"
        />
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:paddingBottom="@dimen/dp5"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginTop="@dimen/dp5"
            android:id="@+id/ll_home_found"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_home_found"
                android:layout_width="@dimen/home_img"
                android:layout_height="@dimen/home_img"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:src="@drawable/ic_edit" />

            <TextView
                android:id="@+id/tv_home_found"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="发现"
                android:textColor="@color/testcolor"
                android:textSize="@dimen/size_home_text" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="@dimen/dp5"
            android:id="@+id/ll_home_square"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_home_square"
                android:layout_width="@dimen/home_img"
                android:layout_height="@dimen/home_img"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:src="@drawable/ic_edit" />

            <TextView
                android:id="@+id/tv_home_square"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="广场"
                android:textColor="@color/testcolor"
                android:textSize="@dimen/size_home_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_home_fb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_home_fb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp5"
                android:src="@drawable/ic_nav_release_on" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp5"
            android:id="@+id/ll_home_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/img_home_message"
                    android:layout_width="@dimen/home_img"
                    android:layout_height="@dimen/home_img"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2dp"
                    android:src="@drawable/ic_edit" />


                <TextView
                    android:id="@+id/tv_xxs"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:textSize="8dp"
                    android:textColor="#F40C0C"
                    android:gravity="center"
                    android:layout_marginLeft="-10dp"
                    android:visibility="gone"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_home_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="消息"
                android:textColor="@color/testcolor"
                android:textSize="@dimen/size_home_text" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="@dimen/dp5"
            android:id="@+id/ll_home_my"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_home_my"
                android:layout_width="@dimen/home_img"
                android:layout_height="@dimen/home_img"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:src="@drawable/ic_edit" />

            <TextView
                android:id="@+id/tv_home_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="个人"
                android:textColor="@color/testcolor"
                android:textSize="@dimen/size_home_text" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>