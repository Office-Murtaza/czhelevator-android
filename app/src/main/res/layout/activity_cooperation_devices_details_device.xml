<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_normal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_device_details_head"
        android:orientation="vertical"
        android:paddingBottom="28dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="28dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备编号："
                android:textColor="#99ffffff"
                android:textSize="@dimen/txt_normal_content" />

            <TextView
                android:id="@+id/tv_device_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#ffffffff"
                android:textSize="@dimen/txt_normal_content"
                tools:text="XB54655466456" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备特征码："
                android:textColor="#99ffffff"
                android:textSize="@dimen/txt_normal_content" />

            <TextView
                android:id="@+id/tv_device_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#ffffffff"
                android:textSize="@dimen/txt_normal_content"
                tools:text="XB54655466456" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="入网日期："
                android:textColor="#99ffffff"
                android:textSize="@dimen/txt_normal_content" />

            <TextView
                android:id="@+id/tv_device_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#ffffffff"
                android:textSize="@dimen/txt_normal_content"
                tools:text="XB54655466456" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址："
                android:textColor="#99ffffff"
                android:textSize="@dimen/txt_normal_content" />

            <TextView
                android:id="@+id/tv_cell_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#ffffffff"
                android:textSize="@dimen/txt_normal_content"
                tools:text="XB54655466456" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_lift_no"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电梯注册代码："
                android:textColor="#99ffffff"
                android:textSize="@dimen/txt_normal_content" />

            <TextView
                android:id="@+id/tv_lift_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#ffffffff"
                android:textSize="@dimen/txt_normal_content"
                tools:text="XB54655466456" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详细位置："
                android:textColor="#99ffffff"
                android:textSize="@dimen/txt_normal_content" />

            <TextView
                android:id="@+id/tv_device_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#ffffffff"
                android:textSize="@dimen/txt_normal_content"
                tools:text="福隆小区 ·5栋1单元 ·1号电梯 ·A屏" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前状态："
                android:textColor="#99ffffff"
                android:textSize="@dimen/txt_normal_content" />

            <TextView
                android:id="@+id/tv_device_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#ffffffff"
                android:textSize="@dimen/txt_normal_content"
                tools:text="福隆小区 ·5栋1单元 ·1号电梯 ·A屏" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="投放状态："
                android:textColor="#99ffffff"
                android:textSize="@dimen/txt_normal_content" />

            <TextView
                android:id="@+id/tv_ad_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#ffffffff"
                android:textSize="@dimen/txt_normal_content"
                tools:text="福隆小区 ·5栋1单元 ·1号电梯 ·A屏" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>