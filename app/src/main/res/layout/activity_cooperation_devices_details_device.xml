<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_normal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_manage_equip"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_device_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#ff333333"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="XB54655466456" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备特征码："
                android:textColor="#666666"
                android:textSize="@dimen/txt_normal_content" />

            <TextView
                android:id="@+id/tv_device_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#666666"
                android:textSize="@dimen/txt_normal_content"
                tools:text="XB54655466456" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp5"
            android:id="@+id/ll_lift_no"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电梯注册代码："
                android:textColor="#666666"
                android:textSize="@dimen/txt_normal_content" />

            <TextView
                android:id="@+id/tv_lift_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#666666"
                android:textSize="@dimen/txt_normal_content"
                tools:text="XB54655466456" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小区地址："
                android:textColor="#666666"
                android:textSize="@dimen/txt_normal_content" />

            <TextView
                android:id="@+id/tv_cell_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#666666"
                android:textSize="@dimen/txt_normal_content"
                tools:text="XB54655466456" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备位置："
                android:textColor="#666666"
                android:textSize="@dimen/txt_normal_content" />

            <TextView
                android:id="@+id/tv_device_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#666666"
                android:textSize="@dimen/txt_normal_content"
                tools:text="福隆小区 ·5栋1单元 ·1号电梯 ·A屏" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="创建时间："
                android:textColor="#666666"
                android:textSize="@dimen/txt_normal_content" />

            <TextView
                android:id="@+id/tv_device_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#666666"
                android:textSize="@dimen/txt_normal_content"
                tools:text="XB54655466456" />
        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="@dimen/dp5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备状态："
                android:textColor="#666666"
                android:textSize="@dimen/txt_normal_content" />

            <TextView
                android:id="@+id/tv_device_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#666666"
                android:textSize="@dimen/txt_normal_content"
                tools:text="福隆小区 ·5栋1单元 ·1号电梯 ·A屏" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="投放状态："
                android:textColor="#666666"
                android:textSize="@dimen/txt_normal_content" />

            <TextView
                android:id="@+id/tv_ad_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#666666"
                android:textSize="@dimen/txt_normal_content"
                tools:text="福隆小区 ·5栋1单元 ·1号电梯 ·A屏" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>