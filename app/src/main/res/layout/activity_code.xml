<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/bg_login_round"
        >
    <include layout="@layout/layout2_top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_dl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入验证码"
            android:textColor="#ff333333"
            android:textSize="22sp"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginTop="50dp"
            android:layout_marginRight="@dimen/dp20"
            android:textStyle="bold"
            />


        <TextView
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginTop="50dp"
            android:layout_marginRight="@dimen/dp20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码已发送至"
            android:textColor="#ff999999"
            android:textSize="14sp"
            />

        <LinearLayout
            android:id="@+id/ll_sjh"
            android:layout_below="@+id/tv_dl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/dp20"
            >


            <TextView
                android:id="@+id/tv_code_phone"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+86  13345678652"
                android:textColor="#666666"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tv_sendcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="48S重新发送"
                android:textColor="#ff999999"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12sp"
                />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="60dp"
            android:layout_height="60dp"
            android:visibility="gone"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <TextView
                        android:id="@+id/tv_number1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff666666"
                        android:textSize="30sp"
                        android:visibility="invisible"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_width="@dimen/dp30"
                        android:layout_height="2dp"
                        android:background="#666666"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <TextView
                        android:id="@+id/tv_number2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff666666"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_width="@dimen/dp30"
                        android:layout_height="2dp"
                        android:background="#666666"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <TextView
                        android:id="@+id/tv_number3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff666666"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_width="@dimen/dp30"
                        android:layout_height="2dp"
                        android:background="#666666"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <TextView
                        android:id="@+id/tv_number4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff666666"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_width="@dimen/dp30"
                        android:layout_height="2dp"
                        android:background="#666666"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <TextView
                        android:id="@+id/tv_number5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff666666"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_width="@dimen/dp30"
                        android:layout_height="2dp"
                        android:background="#666666"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <TextView
                        android:id="@+id/tv_number6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff666666"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_width="@dimen/dp30"
                        android:layout_height="2dp"
                        android:background="#666666"
                        />

                </LinearLayout>

            </LinearLayout>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:textColor="#00000000"
                >
            </EditText>
        </RelativeLayout>


        <com.zhaoss.weixinrecorded.view.PhoneCode
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pc_1"
            android:layout_below="@+id/fpc_1"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />

    </LinearLayout>



    <TextView
        android:id="@+id/tv_code_next"
        android:layout_below="@+id/ll_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:background="@mipmap/btn_common_dislabled"
        android:text="验证登录"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        />
    </LinearLayout>

</LinearLayout>