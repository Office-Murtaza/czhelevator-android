<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F8F6F3"
    android:orientation="vertical"
    android:paddingBottom="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffababab"
            android:textSize="@dimen/txt_normal_content"
            android:textStyle="bold"
            tools:text="平台回复：" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="#ffababab"
            android:textSize="@dimen/txt_normal_content"
            android:textStyle="bold"
            tools:text="03-23 18:00" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_twelve"
        android:layout_marginTop="@dimen/spacing_six"
        android:textColor="#333333"
        android:textSize="@dimen/txt_normal_content"
        android:textStyle="bold"
        tools:text="请在个人中心查看帮助中了解。" />

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_dash_gap_four"
        android:layerType="software" />
</LinearLayout>