<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/item_container"
    android:layout_height="150dp"
    android:paddingStart="17dp"
    android:background="@drawable/bg_cell_item"
    android:paddingTop="12dp"
    android:paddingEnd="32dp"
    android:paddingBottom="9dp">

    <TextView
        android:id="@+id/message_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="华为回应美国第三次延期"
        android:textColor="#ff272626"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/message_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_title"
        android:layout_marginTop="9dp"
        android:maxLines="3"
        android:text="1月18日，美国商务部发布公告，宣布发布90天延期许可，允许美国企业继续与华为进行业务往来。1月18日，美国商务部发布公告，宣布发布90天延期许可，"
        android:textColor="#ff656565"
        android:textSize="13sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/message_date"
        android:layout_marginBottom="5dp"
        android:text="查看详情"
        android:textColor="#ff404040"
        android:textSize="13sp" />

    <ImageView
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/message_date"
        android:layout_marginBottom="5dp"
        android:src="@mipmap/xiaoxi_xiangyouanniuyi"
        android:layout_width="6dp"
        android:layout_height="12dp" />

    <TextView
        android:id="@+id/message_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="2019/11/05"
        android:textColor="#ff656565"
        android:textSize="13sp" />

</RelativeLayout>