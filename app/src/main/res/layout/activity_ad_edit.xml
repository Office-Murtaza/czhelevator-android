<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_header" />

    <LinearLayout
        android:id="@+id/ll_top1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dp10"
        android:gravity="center"
        android:layout_below="@+id/head_root"
        android:padding="@dimen/dp10"
        android:background="@mipmap/bg_order_modify_head">


        <TextView
            android:id="@+id/tv_time_satr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4月20日(周三) "
            android:textColor="#ff333333"
            android:gravity="center_vertical"
            android:textSize="14sp"
            />
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/tv_ad_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商业广告"
                android:textColor="#ff003333"
                android:textSize="16sp"
                />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_order_modify_dotted"
                android:padding="@dimen/dp_15"
                ></ImageView>

            <TextView
                android:id="@+id/tv_total_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="11dp"
                android:text="共2天"
                android:textColor="#ff404040"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                android:paddingTop="@dimen/dp5"
                android:paddingBottom="@dimen/dp5"
                android:background="@drawable/ad_top_plan"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv_end"
                android:layout_marginTop="@dimen/dp20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4月22日(周五) "
                android:textColor="#ff333333"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textSize="14sp"
                />
            <ImageView
                android:layout_marginTop="@dimen/dp10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:src="@mipmap/ic_order_modify_head"
                android:layout_alignParentBottom="true"
                ></ImageView>

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/ll_top1"
        android:layout_margin="@dimen/dp10"
        android:padding="@dimen/dp10"
        >

        <EditText
            android:id="@+id/et_content"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_00000000"
            android:textColor="#ff333333"
            android:textSize="15sp"
            android:hint="请输入广告名称"
            android:padding="@dimen/dp5"
            android:maxLength="20"
            ></EditText>

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4/20"
            android:textColor="#ff999999"
            android:textSize="12sp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_below="@+id/ll_top"
        android:background="#E1E1E1"/>


        <RelativeLayout
            android:id="@+id/rl_ad"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_260"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_top"
            android:layout_marginTop="@dimen/dp20"
            >
            <ImageView
                android:id="@+id/img_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/bj"
                >
            </ImageView>

            <ImageView
                android:id="@+id/img_delete1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_order_modify_delete"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp20"
                android:padding="@dimen/dp10"
                />

            <ImageView
                android:id="@+id/img_updata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_vedio_upload"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:padding="@dimen/dp10"
                />
            <TextView
                android:id="@+id/tv_text_updata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传内容"
                android:textColor="#fffd6509"
                android:visibility="gone"
                android:layout_below="@+id/img_updata"
                android:layout_centerHorizontal="true"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="编辑"
                android:textColor="#ffffffff"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:background="#60000000"
                android:padding="@dimen/dp5"
                android:layout_marginBottom="@dimen/dp30"
                />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/bg_video_upload"
                ></ImageView>
        </RelativeLayout>


    <TextView
        android:id="@+id/tv_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/btn_common_normal"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_50"
        android:gravity="center"
        android:text="提交修改"
        android:textColor="#ffffffff"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp20"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        ></TextView>

</RelativeLayout>