<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <include layout="@layout/layout2_top"/>

    <ImageView
        android:layout_marginTop="@dimen/dp_40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_app_logo"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="屏多多"
        android:gravity="center"
        android:padding="@dimen/dp10"
        android:textColor="#ff333333"
        android:textSize="12sp"
        />





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <LinearLayout
            android:id="@+id/ll_praise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/spacing_default"
            android:paddingRight="@dimen/spacing_default">

            <TextView

                style="@style/text_big_content"
                android:layout_width="0dp"
                android:layout_height="@dimen/spacing_tab_bar"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="给我好评"
                android:textColor="#333333"
                android:textStyle="bold" />

            <TextView
                style="@style/text_normal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/spacing_tab_bar"
                android:drawablePadding="@dimen/spacing_small"
                android:drawableRight="@drawable/ic_user_right"
                android:gravity="center_vertical"
                android:textColor="#FF999999" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_divider"
            android:layout_marginLeft="@dimen/spacing_default"
            android:layout_marginRight="@dimen/spacing_default"
            android:background="@color/black_divider" />
        <LinearLayout
            android:id="@+id/ll_recommended"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/spacing_default"
            android:paddingRight="@dimen/spacing_default">

            <TextView
                style="@style/text_big_content"
                android:layout_width="0dp"
                android:layout_height="@dimen/spacing_tab_bar"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="分享推荐"
                android:textColor="#333333"
                android:textStyle="bold" />

            <TextView
                style="@style/text_normal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/spacing_tab_bar"
                android:drawablePadding="@dimen/spacing_small"
                android:drawableRight="@drawable/ic_user_right"
                android:gravity="center_vertical"
                android:textColor="#FF999999" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_divider"
            android:layout_marginLeft="@dimen/spacing_default"
            android:layout_marginRight="@dimen/spacing_default"
            android:background="@color/black_divider" />

        <TextView
            android:id="@+id/tv_feed_bak"
            style="@style/text_big_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_tab_bar"
            android:background="@drawable/bg_item"
            android:drawableRight="@drawable/ic_user_right"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/spacing_default"
            android:paddingRight="@dimen/spacing_default"
            android:text="意见反馈"
            android:visibility="gone"
            android:textColor="#333333"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_divider"
            android:layout_marginLeft="@dimen/spacing_default"
            android:layout_marginRight="@dimen/spacing_default"
            android:visibility="gone"
            android:background="@color/black_divider" />

        <LinearLayout
            android:id="@+id/ll_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/spacing_default"
            android:paddingRight="@dimen/spacing_default">

            <TextView
                style="@style/text_big_content"
                android:layout_width="0dp"
                android:layout_height="@dimen/spacing_tab_bar"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="版本号"
                android:textColor="#333333"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_center_update"
                />

            <TextView
                android:id="@+id/tv_version"
                style="@style/text_normal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/spacing_tab_bar"
                android:drawableLeft="@drawable/has_new_version"
                android:drawablePadding="@dimen/spacing_four"
                android:gravity="center_vertical"
                android:text="V1.0.0"
                android:textColor="#ABABAB"
                android:textStyle="bold" />

            <TextView
                style="@style/text_normal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/spacing_tab_bar"
                android:drawablePadding="@dimen/spacing_small"
                android:drawableRight="@drawable/ic_user_right"
                android:gravity="center_vertical"
                android:textColor="#FF999999" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_divider"
            android:layout_marginLeft="@dimen/spacing_default"
            android:layout_marginRight="@dimen/spacing_default"
            android:background="@color/black_divider" />

        <LinearLayout
            android:id="@+id/ll_user_privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/spacing_default"
            android:paddingRight="@dimen/spacing_default">

            <TextView
                style="@style/text_big_content"
                android:layout_width="0dp"
                android:layout_height="@dimen/spacing_tab_bar"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="用户协议"
                android:textColor="#333333"
                android:textStyle="bold" />

            <TextView
                style="@style/text_normal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/spacing_tab_bar"
                android:drawablePadding="@dimen/spacing_small"
                android:drawableRight="@drawable/ic_user_right"
                android:gravity="center_vertical"
                android:textColor="#FF999999" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_divider"
            android:layout_marginLeft="@dimen/spacing_default"
            android:layout_marginRight="@dimen/spacing_default"
            android:background="@color/black_divider" />

        <LinearLayout
            android:id="@+id/ll_agreement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/spacing_default"
            android:paddingRight="@dimen/spacing_default">

            <TextView
                style="@style/text_big_content"
                android:layout_width="0dp"
                android:layout_height="@dimen/spacing_tab_bar"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="隐私协议"
                android:textColor="#333333"
                android:textStyle="bold" />

            <TextView
                style="@style/text_normal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/spacing_tab_bar"
                android:drawablePadding="@dimen/spacing_small"
                android:drawableRight="@drawable/ic_user_right"
                android:gravity="center_vertical"
                android:textColor="#FF999999" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_divider"
            android:layout_marginLeft="@dimen/spacing_default"
            android:layout_marginRight="@dimen/spacing_default"
            android:background="@color/black_divider" />

        <LinearLayout
            android:id="@+id/ll_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/spacing_default"
            android:paddingRight="@dimen/spacing_default">

            <TextView
                style="@style/text_big_content"
                android:layout_width="0dp"
                android:layout_height="@dimen/spacing_tab_bar"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="电子邮箱"
                android:textColor="#333333"
                android:textStyle="bold" />

            <TextView
                style="@style/text_normal"
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/spacing_tab_bar"
                android:drawableLeft="@drawable/has_new_version"
                android:drawablePadding="@dimen/spacing_four"
                android:gravity="center_vertical"
                android:text="1234@163.com"
                android:textColor="#ABABAB"
                android:textStyle="bold" />

            <TextView
                style="@style/text_normal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/spacing_tab_bar"
                android:drawablePadding="@dimen/spacing_small"
                android:drawableRight="@drawable/ic_user_right"
                android:gravity="center_vertical"
                android:textColor="#FF999999" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>