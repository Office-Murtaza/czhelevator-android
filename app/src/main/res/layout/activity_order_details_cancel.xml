<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_order_head_cancel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单已取消"
            android:textColor="#ffffffff"
            android:textSize="@dimen/txt_title"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_cancel_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_six"
            android:gravity="top"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消原因："
                android:textColor="#99FFFFFF"
                android:textSize="@dimen/txt_normal_content"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_cancel_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_normal"
                android:textStyle="bold"
                tools:text="5分30秒" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_four"
            android:gravity="top"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消时间："
                android:textColor="#99FFFFFF"
                android:textSize="@dimen/txt_normal_content"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_cancel_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_normal"
                android:textStyle="bold"
                tools:text="2019-05-02 08:00" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:src="@drawable/ic_order_cancel" />
</LinearLayout>