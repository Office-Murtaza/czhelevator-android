<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:ios="true"
    app:leftSwipe="true"
    app:swipeEnable="true">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_item"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_twelve"
            android:layout_marginLeft="@dimen/spacing_default"
            android:layout_marginRight="@dimen/spacing_default"
            android:layout_marginTop="@dimen/spacing_twelve"
            android:layout_weight="1"
            android:textColor="#ff333333"
            android:textSize="@dimen/txt_normal_content"
            tools:text="我的A点位计划" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_twelve"
            android:layout_marginRight="@dimen/spacing_default"
            android:layout_marginTop="@dimen/spacing_twelve"
            android:textColor="#808080"
            android:textSize="@dimen/txt_normal_content"
            tools:text="2018/11/20创建" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="编辑"
            android:textColor="@color/white_normal"
            android:textSize="@dimen/txt_normal_content" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:background="#D0D0D0"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white_normal"
            android:textSize="@dimen/txt_normal_content" />
    </LinearLayout>
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>