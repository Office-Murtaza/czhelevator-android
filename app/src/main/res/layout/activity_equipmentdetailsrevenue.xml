<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp10"
        >

        <ImageView
            android:id="@+id/img_top_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_arrow_back"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_5"
            />

        <TextView
            android:id="@+id/tv_top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="屏多多"
            android:textColor="#ff333333"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            />


        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备报修"
            android:textColor="#FF3049"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            />

    </RelativeLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smart_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_action_bar"
        app:srlEnableAutoLoadMore="true"
        app:srlEnableRefresh="true">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <FrameLayout
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp10"
                    android:background="@color/white_normal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/bg_manage_equip"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/tv_device_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="#ff333333"
                                android:textSize="18sp"
                                android:text="123456789"
                                android:textStyle="bold"
                                tools:text="XB54655466456" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/dp_15"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="设备特征码："
                                android:textColor="#666666"
                                android:textSize="@dimen/txt_normal_content" />

                            <TextView
                                android:id="@+id/tv_device_no"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="#666666"
                                android:textSize="@dimen/txt_normal_content"
                                tools:text="XB54655466456" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="@dimen/dp5"
                            android:id="@+id/ll_lift_no"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="电梯注册代码："
                                android:textColor="#666666"
                                android:textSize="@dimen/txt_normal_content" />

                            <TextView
                                android:id="@+id/tv_lift_no"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="#666666"
                                android:textSize="@dimen/txt_normal_content"
                                tools:text="XB54655466456" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="@dimen/dp5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="小区地址："
                                android:textColor="#666666"
                                android:textSize="@dimen/txt_normal_content" />

                            <TextView
                                android:id="@+id/tv_cell_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="#666666"
                                android:textSize="@dimen/txt_normal_content"
                                tools:text="XB54655466456" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="@dimen/dp5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="设备位置："
                                android:textColor="#666666"
                                android:textSize="@dimen/txt_normal_content" />

                            <TextView
                                android:id="@+id/tv_device_location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="#666666"
                                android:textSize="@dimen/txt_normal_content"
                                tools:text="福隆小区 ·5栋1单元 ·1号电梯 ·A屏" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="@dimen/dp5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="创建时间："
                                android:textColor="#666666"
                                android:textSize="@dimen/txt_normal_content" />

                            <TextView
                                android:id="@+id/tv_device_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="#666666"
                                android:textSize="@dimen/txt_normal_content"
                                tools:text="XB54655466456" />
                        </LinearLayout>



                        <LinearLayout
                            android:layout_marginTop="@dimen/dp5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="设备状态："
                                android:textColor="#666666"
                                android:textSize="@dimen/txt_normal_content" />

                            <TextView
                                android:id="@+id/tv_device_status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="#666666"
                                android:textSize="@dimen/txt_normal_content"
                                tools:text="福隆小区 ·5栋1单元 ·1号电梯 ·A屏" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="@dimen/dp5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="投放状态："
                                android:textColor="#666666"
                                android:textSize="@dimen/txt_normal_content" />

                            <TextView
                                android:id="@+id/tv_ad_status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="#666666"
                                android:textSize="@dimen/txt_normal_content"
                                tools:text="福隆小区 ·5栋1单元 ·1号电梯 ·A屏" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收益明细"
                    android:textColor="#ff333333"
                    android:layout_marginLeft="@dimen/dp10"
                    android:textSize="16sp"
                    />

                <LinearLayout
                    android:id="@+id/ll_choose_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp10"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp10"
                    android:background="@mipmap/bg_manage_date"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_manage_date"
                        ></ImageView>

                    <TextView
                        android:id="@+id/tv_choose_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2020年06月"
                        android:textColor="#ff1a1d48"
                        android:textSize="15sp"
                        android:layout_marginLeft="@dimen/dp10"
                        />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_manage_arrow_date"
                        ></ImageView>

                </LinearLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    />

                <include layout="@layout/layout_error"
                    android:visibility="gone"
                    />
                <include layout="@layout/layout_null"
                    android:visibility="gone"
                    />
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>


    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</LinearLayout>