<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_root"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:background="@drawable/bg_cell_item"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginLeft="@dimen/spacing_default"
        app:cardBackgroundColor="#00000000"
        app:cardCornerRadius="@dimen/spacing_small"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/img_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="106dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#ff333333"
            android:textSize="@dimen/txt_big_content"
            android:textStyle="bold"
            tools:text="美年广场" />

        <TextView
            android:id="@+id/tv_lift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_four"
            android:layout_marginTop="@dimen/spacing_four"
            android:drawableLeft="@drawable/ic_lift_number"
            android:drawablePadding="@dimen/spacing_four"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#ffababab"
            android:textSize="13sp"
            android:textStyle="bold"
            tools:text="7部电梯" />

        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_unit_number"
            android:drawablePadding="@dimen/spacing_four"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#ffababab"
            android:textSize="13sp"
            android:textStyle="bold"
            tools:text="1个单元" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#EC7A12"
            android:textSize="@dimen/txt_title"
            android:textStyle="bold"
            tools:text="￥333/天" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="128dp"
        android:gravity="right"
        android:orientation="vertical"
        android:paddingTop="@dimen/spacing_default">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_default"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="120dp"
            android:singleLine="true"
            android:textColor="#ffababab"
            android:textSize="13sp"
            android:textStyle="bold"
            tools:text="天府五街93号" />

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_default"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="120dp"
            android:singleLine="true"
            android:textColor="#ffababab"
            android:textSize="13sp"
            android:textStyle="bold"
            tools:text="100m" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/img_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_to_plan" />
    </LinearLayout>

</LinearLayout>