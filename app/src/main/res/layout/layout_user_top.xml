<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/rl_bj"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_220"
        >


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
         ></ImageView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/bg_information_mask"
            android:layout_alignParentBottom="true"
            android:scaleType="centerCrop"
            ></ImageView>

        <ImageView
            android:id="@+id/img_placeholder"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@mipmap/im_head_placeholder"
            android:layout_below="@+id/rl_top"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_40"
            ></ImageView>


        <TextView
            android:id="@+id/tv_name"
            android:layout_marginTop="@dimen/dp10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffffff"
            android:layout_below="@+id/img_placeholder"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:drawableRight="@mipmap/ic_sexy_woman"
            android:drawablePadding="@dimen/dp10"
            />

        <TextView
            android:id="@+id/tv_idnumber"
            android:layout_marginTop="@dimen/dp5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(ID:23455765)"
            android:textColor="#ffe4e4e4"
            android:layout_below="@+id/tv_name"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/tv_attention_number"
            android:layout_marginTop="@dimen/dp10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关注   12    |    粉丝   27"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            android:layout_below="@+id/tv_idnumber"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_marginTop="@dimen/dp5"
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffe3e3e3"
            android:textSize="12sp"
            android:layout_below="@+id/tv_attention_number"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_dtnum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="全部动态 2 条"
        android:textColor="#ff999999"
        android:textSize="14sp"
        android:background="#F4F4F9"
        android:paddingLeft="@dimen/dp_15"
        android:paddingBottom="@dimen/dp5"
        android:paddingTop="@dimen/dp5"
        />


</LinearLayout>