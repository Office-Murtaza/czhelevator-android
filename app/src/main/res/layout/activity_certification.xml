<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <include layout="@layout/layout2_top"/>


    <TextView
        android:layout_marginTop="@dimen/dp_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择认证方式（二选一）"
        android:textColor="#ff333333"
        android:textSize="14sp"
        android:padding="@dimen/dp10"
        />



    <LinearLayout
        android:id="@+id/ll_zfb"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp10"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_attest_alipay"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp10"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝授权认证"
                android:textColor="#ff333333"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_marginTop="@dimen/dp5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通过个人支付宝账户授权认证"
                android:textColor="#ff999999"
                android:textSize="12sp"
                />


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_sfz"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp10"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_attest_card"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp10"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证件认证"
                android:textColor="#ff333333"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_marginTop="@dimen/dp5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通过填写上传个人证件信息认证"
                android:textColor="#ff999999"
                android:textSize="12sp"
                />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>