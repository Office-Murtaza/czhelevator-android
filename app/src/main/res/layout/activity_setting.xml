<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_normal"
    android:orientation="vertical">

    <include layout="@layout/layout_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/background" />

        <LinearLayout
            android:id="@+id/ll_cache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/spacing_default"
            android:paddingRight="@dimen/spacing_default">

            <TextView
                style="@style/text_big_content"
                android:layout_width="0dp"
                android:layout_height="@dimen/spacing_tab_bar"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="清除缓存"
                android:textColor="#333333"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_cache"
                style="@style/text_normal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/spacing_tab_bar"
                android:drawablePadding="@dimen/spacing_small"
                android:drawableRight="@drawable/ic_user_right"
                android:gravity="center_vertical"
                android:text="10.0MB"
                android:textColor="#ABABAB"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_divider"
            android:layout_marginLeft="@dimen/spacing_default"
            android:layout_marginRight="@dimen/spacing_default"
            android:background="@color/black_divider" />

        <TextView
            android:id="@+id/tv_feed_bak"
            style="@style/text_big_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_tab_bar"
            android:background="@drawable/bg_item"
            android:drawableRight="@drawable/ic_user_right"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/spacing_default"
            android:paddingRight="@dimen/spacing_default"
            android:text="意见反馈"
            android:textColor="#333333"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_divider"
            android:layout_marginLeft="@dimen/spacing_default"
            android:layout_marginRight="@dimen/spacing_default"
            android:background="@color/black_divider" />

        <LinearLayout
            android:id="@+id/ll_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/spacing_default"
            android:paddingRight="@dimen/spacing_default">

            <TextView
                style="@style/text_big_content"
                android:layout_width="0dp"
                android:layout_height="@dimen/spacing_tab_bar"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="版本号"
                android:textColor="#333333"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_version"
                style="@style/text_normal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/spacing_tab_bar"
                android:drawableLeft="@drawable/has_new_version"
                android:drawablePadding="@dimen/spacing_four"
                android:gravity="center_vertical"
                android:text="V1.0.0"
                android:textColor="#ABABAB"
                android:textStyle="bold" />

            <TextView
                style="@style/text_normal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/spacing_tab_bar"
                android:drawablePadding="@dimen/spacing_small"
                android:drawableRight="@drawable/ic_user_right"
                android:gravity="center_vertical"
                android:textColor="#FF999999" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_divider"
            android:layout_marginLeft="@dimen/spacing_default"
            android:layout_marginRight="@dimen/spacing_default"
            android:background="@color/black_divider" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_tab_bar"
        android:layout_marginBottom="@dimen/spacing_twelve"
        android:layout_marginLeft="@dimen/spacing_default"
        android:layout_marginRight="@dimen/spacing_default"
        android:layout_marginTop="120dp"
        android:background="@drawable/bg_six_btn"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@color/white_normal"
        android:textSize="@dimen/txt_sub_title" />
</LinearLayout>