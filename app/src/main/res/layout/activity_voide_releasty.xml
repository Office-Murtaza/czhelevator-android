<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".uis.actiivty2.main.VoideReleasetyActiivty"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
    >

        <include layout="@layout/layout_releaset_top"
            />
    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <ScrollView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_210">


                                    <ImageView
                                        android:id="@+id/image_addvideo"
                                        android:layout_width="match_parent"
                                        android:layout_height="210dp"
                                        android:scaleType="centerCrop"
                                        />

                                    <ImageView
                                        android:id="@+id/img_video_play"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@mipmap/btn_video_play"
                                        android:layout_centerInParent="true"
                                        />

                                    <TextView
                                        android:id="@+id/tv_cover"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="编辑封面"
                                        android:textColor="#ffffffff"
                                        android:textSize="10sp"
                                        android:layout_alignParentBottom="true"
                                        android:layout_alignParentRight="true"
                                        android:layout_margin="@dimen/dp_10"
                                        android:background="@drawable/bg_ad_voide"
                                        android:paddingLeft="@dimen/dp_10"
                                        android:paddingTop="@dimen/dp_5"
                                        android:paddingRight="@dimen/dp_10"
                                        android:paddingBottom="@dimen/dp_5"
                                        />
                                    <TextView
                                        android:id="@+id/tv_choose"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="重新选择"
                                        android:textColor="#ffffffff"
                                        android:textSize="10sp"
                                        android:layout_toLeftOf="@+id/tv_cover"
                                        android:layout_alignParentBottom="true"
                                        android:layout_margin="@dimen/dp_10"
                                        android:background="@drawable/bg_ad_voide"
                                        android:paddingLeft="@dimen/dp_10"
                                        android:paddingTop="@dimen/dp_5"
                                        android:paddingRight="@dimen/dp_10"
                                        android:paddingBottom="@dimen/dp_5"
                                        />


                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >

                                    <EditText
                                        android:id="@+id/edit_title"
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="请输入标题"
                                        android:textColor="#000000"
                                        android:textSize="@dimen/sp_14"
                                        android:background="#00000000"
                                        android:padding="@dimen/dp_10"
                                        android:maxLength="30"
                                        ></EditText>


                                    <TextView
                                        android:id="@+id/tv_zhi_number"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0/30"
                                        android:textColor="#ff999999"
                                        android:textSize="10sp"
                                        />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_0_1"
                                    android:background="#E1E1E1"
                                    android:layout_margin="@dimen/dp_10"
                                    />

                                <com.bobomee.android.mentions.edit.MentionEditText
                                    android:id="@+id/edit_conent"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_180"
                                    android:background="#00000000"
                                    android:hint="请输入内容..."
                                    android:textColor="#333333"
                                    android:gravity="top"
                                    android:padding="@dimen/dp_10"
                                    android:maxLength="500"
                                    />


                                <TextView
                                    android:id="@+id/tv_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0/500"
                                    android:textColor="#000000"
                                    android:layout_gravity="end"
                                    android:textSize="10sp"
                                    android:layout_margin="@dimen/dp_10"
                                    />


                                <include layout="@layout/layout_topic"
                                    android:visibility="gone"
                                    />


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:padding="@dimen/dp_10"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="视频来源："
                                        android:textColor="#ff333333"
                                        android:textSize="@dimen/sp_14"
                                        />

                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                    <ImageView
                                        android:id="@+id/image_original"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@mipmap/btn_video_resource_on"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="原创"
                                        android:textColor="#ff333333"
                                        android:textSize="@dimen/sp_14"
                                        android:layout_marginLeft="@dimen/dp_10"
                                        android:layout_marginRight="@dimen/dp_20"
                                        />


                                    <ImageView
                                        android:id="@+id/imag_reprinted"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@mipmap/btn_video_resource_off"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_10"
                                        android:text="转载"
                                        android:textColor="#ff333333"
                                        android:textSize="@dimen/sp_14"
                                        />

                                </LinearLayout>
                        </LinearLayout>
                </ScrollView>


            <LinearLayout
                android:id="@+id/ll_bq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_icon"
                android:layout_width="24dp"
                android:layout_height="22dp"
                android:layout_marginRight="@dimen/dp30"
                android:visibility="gone"
                android:src="@mipmap/btn_comments_expression" />


            <ImageView
                android:id="@+id/img_aite"
                android:layout_width="24dp"
                android:layout_height="22dp"
                android:layout_marginRight="@dimen/dp30"
                android:src="@mipmap/btn_comments_aite" />


            <ImageView
                android:id="@+id/img_huati"
                android:layout_width="24dp"
                android:layout_height="22dp"
                android:layout_marginRight="@dimen/dp30"
                android:src="@mipmap/btn_comments_topic" />

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_zishu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/500"
                android:textColor="#ff999999"
                android:visibility="gone"
                android:textSize="10sp"
                />

        </LinearLayout>
        </LinearLayout>
</LinearLayout>