<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_normal"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/layout_header" />

    <include layout="@layout/ui_layout_divider" />

    <!--<com.leo.afbaselibrary.widgets.StateLayout-->
    <!--android:id="@+id/stateLayout"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content">-->

    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:orientation="vertical">-->

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/fl_location"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@mipmap/ic_position_black"
                    android:drawablePadding="@dimen/spacing_four"
                    android:textColor="#ff808080"
                    android:textSize="@dimen/txt_normal_content"
                    android:background="@drawable/bg_location"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:padding="@dimen/dp5"
                    android:text="位置" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="#ff808080"
                    android:textSize="@dimen/txt_normal_content"
                    android:padding="@dimen/dp5"
                    android:layout_marginLeft="@dimen/dp5"
                    ></TextView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_divider"
                android:background="@drawable/white_margin_sixteen_divider" />

            <LinearLayout
                android:id="@+id/ll_device_no"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/spacing_default"
                    android:gravity="center_vertical"
                    android:text="设备特征码"
                    android:textColor="#ff808080"
                    android:textSize="@dimen/txt_big_content"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_device_no"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_user_right"
                    android:gravity="center_vertical|right"
                    android:hint="扫描设备特征码"
                    android:paddingLeft="@dimen/spacing_small"
                    android:paddingRight="@dimen/spacing_default"
                    android:textColor="#333333"
                    android:textColorHint="#ff808080"
                    android:textSize="@dimen/txt_big_content"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_divider"
                android:background="@drawable/white_margin_sixteen_divider" />

            <LinearLayout
                android:id="@+id/ll_cell"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/spacing_default"
                    android:gravity="center_vertical"
                    android:text="小区"
                    android:textColor="#ff808080"
                    android:textSize="@dimen/txt_big_content"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_cell"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_user_right"
                    android:gravity="center_vertical|right"
                    android:hint="请选择"
                    android:paddingLeft="@dimen/spacing_small"
                    android:paddingRight="@dimen/spacing_default"
                    android:textColor="#333333"
                    android:textColorHint="#ff808080"
                    android:textSize="@dimen/txt_big_content"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_divider"
                android:background="@drawable/white_margin_sixteen_divider" />

            <LinearLayout
                android:id="@+id/ll_build"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/spacing_default"
                    android:gravity="center_vertical"
                    android:text="楼栋"
                    android:textColor="#ff808080"
                    android:textSize="@dimen/txt_big_content"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_build"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_user_right"
                    android:gravity="center_vertical|right"
                    android:hint="请选择"
                    android:paddingLeft="@dimen/spacing_small"
                    android:paddingRight="@dimen/spacing_default"
                    android:textColor="#333333"
                    android:textColorHint="#ff808080"
                    android:textSize="@dimen/txt_big_content"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_divider"
                android:background="@drawable/white_margin_sixteen_divider" />

            <LinearLayout
                android:id="@+id/ll_unit"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/spacing_default"
                    android:gravity="center_vertical"
                    android:text="单元"
                    android:textColor="#ff808080"
                    android:textSize="@dimen/txt_big_content"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_unit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_user_right"
                    android:gravity="center_vertical|right"
                    android:hint="请选择"
                    android:paddingLeft="@dimen/spacing_small"
                    android:paddingRight="@dimen/spacing_default"
                    android:textColor="#333333"
                    android:textColorHint="#ff808080"
                    android:textSize="@dimen/txt_big_content"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_divider"
                android:background="@drawable/white_margin_sixteen_divider" />

            <LinearLayout
                android:id="@+id/ll_lift"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/spacing_default"
                    android:gravity="center_vertical"
                    android:text="电梯"
                    android:textColor="#ff808080"
                    android:textSize="@dimen/txt_big_content"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_lift"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_user_right"
                    android:gravity="center_vertical|right"
                    android:hint="请选择"
                    android:paddingLeft="@dimen/spacing_small"
                    android:paddingRight="@dimen/spacing_default"
                    android:textColor="#333333"
                    android:textColorHint="#ff808080"
                    android:textSize="@dimen/txt_big_content"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_divider"
                    android:background="@drawable/white_margin_sixteen_divider" />

                <LinearLayout
                    android:id="@+id/ll_camera_info"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/spacing_default"
                        android:gravity="center_vertical"
                        android:text="摄像头品牌"
                        android:textColor="#ff808080"
                        android:textSize="@dimen/txt_big_content"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_camera_info"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/ic_user_right"
                        android:gravity="center_vertical|right"
                        android:hint="请选择"
                        android:paddingLeft="@dimen/spacing_small"
                        android:paddingRight="@dimen/spacing_default"
                        android:textColor="#333333"
                        android:textColorHint="#ff808080"
                        android:textSize="@dimen/txt_big_content"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_divider"
                    android:background="@drawable/white_margin_sixteen_divider" />

                <LinearLayout
                    android:id="@+id/ll_camera_ip"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/spacing_default"
                        android:gravity="center_vertical"
                        android:text="摄像头IP"
                        android:textColor="#ff808080"
                        android:textSize="@dimen/txt_big_content"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_camera_ip"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890.:/"
                        android:gravity="center_vertical|right"
                        android:hint="请输入摄像头IP"
                        android:inputType="textVisiblePassword"
                        android:paddingLeft="@dimen/spacing_default"
                        android:paddingRight="@dimen/spacing_default"
                        android:textColor="#333333"
                        android:textColorHint="#ff808080"
                        android:textSize="@dimen/txt_big_content"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_divider"
                android:background="@drawable/white_margin_sixteen_divider" />

            <LinearLayout
                android:id="@+id/ll_oritation"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/spacing_default"
                    android:gravity="center_vertical"
                    android:text="屏幕位置"
                    android:textColor="#ff808080"
                    android:textSize="@dimen/txt_big_content"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!--<ImageView-->
                <!--android:id="@+id/img_oritation"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--tools:src="@drawable/ic_screen_left" />-->

                <TextView
                    android:id="@+id/tv_oritation"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_user_right"
                    android:gravity="center_vertical|right"
                    android:hint="请选择"
                    android:paddingLeft="@dimen/spacing_small"
                    android:paddingRight="@dimen/spacing_default"
                    android:textColor="#333333"
                    android:textColorHint="#ff808080"
                    android:textSize="@dimen/txt_big_content"
                    android:textStyle="bold"
                    tools:drawableLeft="@mipmap/ic_screen_left" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_divider"
                android:background="@drawable/white_margin_sixteen_divider" />

            <LinearLayout
                android:id="@+id/ll_type"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/spacing_default"
                    android:gravity="center_vertical"
                    android:text="屏幕类型"
                    android:textColor="#ff808080"
                    android:textSize="@dimen/txt_big_content"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_user_right"
                    android:gravity="center_vertical|right"
                    android:hint="请选择"
                    android:paddingLeft="@dimen/spacing_small"
                    android:paddingRight="@dimen/spacing_default"
                    android:textColor="#333333"
                    android:textColorHint="#ff808080"
                    android:textSize="@dimen/txt_big_content"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_divider"
                android:background="@drawable/white_margin_sixteen_divider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/spacing_default"
                android:layout_marginLeft="@dimen/spacing_default"
                android:layout_marginRight="@dimen/spacing_default"
                android:layout_marginTop="@dimen/spacing_default"
                android:text="若无此电梯，去添加"
                android:textColor="#ff808080"
                android:textSize="@dimen/txt_normal_content"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginBottom="@dimen/spacing_twelve"
        android:layout_marginLeft="@dimen/spacing_default"
        android:layout_marginRight="@dimen/spacing_default"
        android:layout_marginTop="@dimen/spacing_twelve"
        android:background="@drawable/bg_six_btn"
        android:gravity="center"
        android:text="提交"
        android:textColor="#ffffffff"
        android:textSize="@dimen/txt_big_content"
        android:textStyle="bold" />
    <!--</LinearLayout>-->
    <!--</com.leo.afbaselibrary.widgets.StateLayout>-->
</LinearLayout>