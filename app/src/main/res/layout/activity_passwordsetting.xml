<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/bg_login_round"
        >

    <include layout="@layout/layout2_top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_dl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录密码设置"
            android:textColor="#ff333333"
            android:textSize="22sp"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginTop="50dp"
            android:layout_marginRight="@dimen/dp20"
            android:textStyle="bold"
            />

        <LinearLayout
            android:id="@+id/ll_sjh"
            android:layout_below="@+id/tv_dl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="40dp"
            >



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_login_password"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp10"
                ></ImageView>

            <TextView
                android:layout_width="@dimen/dp1"
                android:layout_height="match_parent"
                android:background="#E1E1E1"
                android:layout_margin="@dimen/dp10"
                />
            <EditText
                android:id="@+id/ed_password"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#00000000"
                android:hint="请设置登录密码"
                android:password="true"
                android:maxLength="20"
                ></EditText>


            <ImageView
                android:id="@+id/img_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_login_pasword_off"
                android:layout_gravity="center"
                android:padding="@dimen/dp10"
                ></ImageView>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:layout_marginTop="@dimen/dp5"
            android:background="#E1E1E1"/>

        <LinearLayout
            android:layout_below="@+id/tv_dl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_login_recom"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp10"
                ></ImageView>


            <TextView
                android:layout_width="@dimen/dp1"
                android:layout_height="match_parent"
                android:background="#E1E1E1"
                android:layout_margin="@dimen/dp10"
                />

            <EditText
                android:id="@+id/ed_recommended_code"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#00000000"
                android:hint="请输入推荐码（选填）"
                ></EditText>


            <ImageView
                android:id="@+id/img_sweep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_login_scanning"
                android:layout_gravity="center"
                android:padding="@dimen/dp10"
                ></ImageView>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:layout_marginTop="@dimen/dp5"
            android:background="#E1E1E1"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_login_next"
        android:layout_below="@+id/ll_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:background="@mipmap/btn_common_normal"
        android:text="下一步"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        />

</LinearLayout>
</LinearLayout>