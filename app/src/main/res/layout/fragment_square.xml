<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_top"
    android:background="@color/white"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <com.youth.banner.Banner
                android:id="@+id/banner_square"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_180"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp10"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp10"
                >

                <LinearLayout
                    android:id="@+id/ll_shopping"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_square_store"
                        ></ImageView>

                    <TextView
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="购物"
                        android:textColor="#ff333333"
                        android:textSize="@dimen/sp_14"
                        />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_activity"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_square_active"
                        ></ImageView>

                    <TextView
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="活动"
                        android:textColor="#ff333333"
                        android:textSize="@dimen/sp_14"
                        />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_academy"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_square_school"
                        ></ImageView>

                    <TextView
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="营销学院"
                        android:textColor="#ff333333"
                        android:textSize="@dimen/sp_14"
                        />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_guide"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_square_shopper"
                        ></ImageView>

                    <TextView
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="导购"
                        android:textColor="#ff333333"
                        android:textSize="@dimen/sp_14"
                        />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="@dimen/dp10"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最新活动"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看更多"
                    android:textColor="#ff999999"
                    android:textSize="@dimen/sp_12"
                    android:drawableEnd="@mipmap/ic_square_more"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120"
                android:orientation="horizontal"
                android:padding="@dimen/dp10"
                >

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/im_square_banner1"
                    android:scaleType="fitXY"
                    android:padding="@dimen/dp5"
                    />


                <ImageView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/im_square_banner1"
                    android:scaleType="fitXY"
                    android:padding="@dimen/dp5"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="@dimen/dp10"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="营销学院"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_more1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看更多"
                    android:textColor="#ff999999"
                    android:textSize="@dimen/sp_12"
                    android:drawableEnd="@mipmap/ic_square_more"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120"
                android:orientation="horizontal"
                android:padding="@dimen/dp10"
                >

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/im_square_banner1"
                    android:scaleType="fitXY"
                    android:padding="@dimen/dp5"
                    />


                <ImageView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/im_square_banner1"
                    android:scaleType="fitXY"
                    android:padding="@dimen/dp5"
                    />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>





</LinearLayout>