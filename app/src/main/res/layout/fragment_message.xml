<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"

    >

    <LinearLayout
        android:id="@+id/rl_bj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:orientation="horizontal"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消息"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_16"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部已读"
                android:textColor="#ffff3049"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_14"
                />
        </RelativeLayout>

    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        android:background="#E1E1E1"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        ></TextView>

    <com.leo.afbaselibrary.widgets.StateLayout
        android:id="@+id/stateLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/smart_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/my_action_bar"
            app:srlEnableAutoLoadMore="true"
            app:srlEnableRefresh="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:id="@+id/ll_msagger"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/dp_10"
                        >

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/ic_message_notice"
                                ></ImageView>

                            <TextView
                                android:id="@+id/tv_massage_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2"
                                android:gravity="center"
                                android:textColor="#ffffffff"
                                android:textSize="@dimen/sp_10"
                                android:paddingLeft="@dimen/dp_4"
                                android:paddingRight="@dimen/dp_4"
                                android:background="@drawable/bg_masg_number"
                                android:layout_marginLeft="@dimen/dp_40"
                                android:visibility="gone"
                                />

                        </RelativeLayout>

                        <TextView
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="消息"
                            android:textColor="#ff999999"
                            android:textSize="@dimen/sp_12"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_attention"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/dp_10"
                        >

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/ic_message_follow"
                                ></ImageView>

                            <TextView
                                android:id="@+id/tv_attention_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="28"
                                android:textColor="#ffffffff"
                                android:textSize="@dimen/sp_10"
                                android:background="@drawable/bg_masg_number"
                                android:paddingLeft="@dimen/dp_4"
                                android:paddingRight="@dimen/dp_4"
                                android:layout_marginLeft="@dimen/dp_40"
                                android:visibility="gone"
                                />

                        </RelativeLayout>

                        <TextView
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关注"
                            android:textColor="#ff999999"
                            android:textSize="@dimen/sp_12"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_like"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/dp_10"
                        >

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/ic_message_like"
                                ></ImageView>

                            <TextView
                                android:id="@+id/tv_like_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="28"
                                android:textColor="#ffffffff"
                                android:textSize="@dimen/sp_10"
                                android:background="@drawable/bg_masg_number"
                                android:paddingLeft="@dimen/dp_4"
                                android:paddingRight="@dimen/dp_4"
                                android:layout_marginLeft="@dimen/dp_40"
                                android:visibility="gone"
                                />

                        </RelativeLayout>

                        <TextView
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="点赞"
                            android:textColor="#ff999999"
                            android:textSize="@dimen/sp_12"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_comment"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/dp_10"
                        >

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/ic_message_comment"
                                ></ImageView>

                            <TextView
                                android:id="@+id/tv_comment_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2"
                                android:textColor="#ffffffff"
                                android:textSize="@dimen/sp_10"
                                android:background="@drawable/bg_masg_number"
                                android:layout_marginLeft="@dimen/dp_40"
                                android:paddingLeft="@dimen/dp_4"
                                android:paddingRight="@dimen/dp_4"
                                android:visibility="gone"
                                />

                        </RelativeLayout>

                        <TextView
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pinglun"
                            android:textColor="#ff999999"
                            android:textSize="@dimen/sp_12"
                            />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_1"
                    android:background="#E1E1E1"
                    android:layout_margin="@dimen/dp_10"
                    ></TextView>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcv_list_massage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

                <include layout="@layout/layout_error"
                    android:visibility="gone"
                    />
                <include layout="@layout/layout_null"
                    android:visibility="gone"
                    />
                <include layout="@layout/layout_notlogin"
                    android:visibility="gone"
                    />

            </LinearLayout>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    </com.leo.afbaselibrary.widgets.StateLayout>









</LinearLayout>