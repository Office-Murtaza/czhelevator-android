<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="66dp"
    android:layout_height="20dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.kingyon.elevator.uis.widgets.ProportionFrameLayout
        android:id="@+id/img_decrease"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/bg_edit_countoperate"
        app:proporty="1">

        <ImageView
            android:layout_width="11dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_decrease_shape" />
    </com.kingyon.elevator.uis.widgets.ProportionFrameLayout>

    <EditText
        android:id="@+id/ed_input"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="9"
        android:minWidth="24sp"
        android:text="1"
        android:textColor="#FF333333"
        android:textSize="@dimen/txt_big_content" />

    <com.kingyon.elevator.uis.widgets.ProportionFrameLayout
        android:id="@+id/img_increase"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/bg_edit_countoperate"
        app:proporty="1">

        <ImageView
            android:layout_width="11dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_decrease_shape" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="11dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_increase_shape" />
    </com.kingyon.elevator.uis.widgets.ProportionFrameLayout>
</LinearLayout>