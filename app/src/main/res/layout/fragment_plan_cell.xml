<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_cell_item"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_cell_item"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/img_choose"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:padding="12dp"
            android:src="@drawable/ic_check_big" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:id="@+id/v_delete"
                android:layout_width="@dimen/spacing_default"
                android:layout_height="match_parent" />

            <android.support.v7.widget.CardView
                android:layout_width="96dp"
                android:layout_height="96dp"
                app:cardBackgroundColor="#00000000"
                app:cardCornerRadius="@dimen/spacing_small"
                app:cardElevation="0dp"
                android:visibility="gone"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/img_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"

                    />
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/txt_big_content"
                    android:textStyle="bold"
                    tools:text="美年广场" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_four"
                    android:layout_marginBottom="@dimen/spacing_four"
                    android:drawablePadding="@dimen/spacing_four"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="#ffababab"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:text="观山湖区盘江路与盘江南路交汇处"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tv_lift"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="#333333"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        tools:text="7部电梯" />

                    <TextView
                        android:layout_width="@dimen/dp1"
                        android:layout_height="match_parent"
                        android:background="#333333"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_marginLeft="@dimen/dp_20"
                        ></TextView>

                    <TextView
                        android:id="@+id/tv_screen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="#333333"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        tools:text="15面屏" />

                    <TextView
                        android:id="@+id/tv_screen_ky"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="（12可用）"
                        android:textColor="#ff2d6ef2"
                        android:layout_marginLeft="@dimen/dp10"
                        android:textSize="14sp"
                        />

                </LinearLayout>





                <LinearLayout
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥ 10 元/台/天"
                        android:textColor="#ff999999"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/tv_origin_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="0元/天"
                        android:textColor="#ff7f7f7f"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical"
               >

                <TextView
                    android:id="@+id/tv_assign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_plan_time_right"
                    android:drawablePadding="@dimen/spacing_six"
                    android:paddingLeft="10dp"
                    android:paddingRight="@dimen/spacing_default"
                    android:text="单独指定"
                    android:textColor="#ffababab"
                    android:textSize="13sp" />


                <com.kingyon.elevator.uis.widgets.EditCountViewInList
                    android:id="@+id/ecv_count"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/spacing_default"
                    android:layout_marginBottom="@dimen/spacing_default" />

                <ImageView
                    android:id="@+id/img_choose_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_default"
                    android:visibility="gone"
                    android:src="@drawable/ic_check_big" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
   
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#80E1E1E1"
        android:layout_margin="@dimen/dp_10"/>

</LinearLayout>