<?xml version="1.0" encoding="utf-8"?>
<com.leo.afbaselibrary.widgets.StateLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stateLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_add_card"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableStart="@mipmap/zhanghao_xinzengzhanghutubiao"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:paddingStart="29dp"
            android:text="新增账户"
            android:textColor="#EC8D47"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/card_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="29dp"
                android:layout_marginTop="13dp"
                android:text="已添加账户"
                android:textColor="#B1B1B1"
                android:textSize="15sp" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/bank_card_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginTop="12dp"
            android:text="银行卡账户不支持类型：信用卡账户"
            android:textColor="#949494"
            android:textSize="15sp" />
    </LinearLayout>

</com.leo.afbaselibrary.widgets.StateLayout>