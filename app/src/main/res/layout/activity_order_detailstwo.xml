<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.leo.afbaselibrary.widgets.StateLayout
        android:id="@+id/stateLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/pre_refresh"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <android.support.v4.widget.NestedScrollView
                        android:id="@+id/nsv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <com.kingyon.elevator.uis.widgets.ProportionFrameLayout
                                android:id="@+id/pfl_head"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="-70dp"
                                app:proporty="1.60256">

                                <ImageView
                                    android:id="@+id/img_head"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:background="@mipmap/bg_order_detail"
                                    />

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:layout_marginBottom="70dp"
                                    android:orientation="horizontal">

                                    <!--待付款-->
                                    <include
                                        layout="@layout/activity_order_details_waitpay"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom"
                                        android:layout_marginBottom="@dimen/spacing_twenty_four" />

                                    <!--订单取消-->
                                    <include
                                        layout="@layout/activity_order_details_cancel"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom"
                                        android:layout_marginBottom="@dimen/spacing_twenty_four" />

                                    <!--广告审核-->
                                    <include
                                        layout="@layout/activity_order_details_authing"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom"
                                        android:layout_marginBottom="@dimen/spacing_twenty_four" />

                                    <!--广告审核不通过-->
                                    <include
                                        layout="@layout/activity_order_details_authfailed"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom"
                                        android:layout_marginBottom="@dimen/spacing_twenty_four" />

                                    <!--广告待投放-->
                                    <include
                                        layout="@layout/activity_order_details_waitrelease"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom"
                                        android:layout_marginBottom="@dimen/spacing_twenty_four" />

                                    <!--广告投放中-->
                                    <include
                                        layout="@layout/activity_order_details_releasing"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom"
                                        android:layout_marginBottom="@dimen/spacing_twenty_four" />

                                    <!--当前广告推广已完成-->
                                    <include
                                        layout="@layout/activity_order_details_completed"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom"
                                        android:layout_marginBottom="@dimen/spacing_twenty_four" />

                                    <!--投放失败-->
                                    <include
                                        layout="@layout/activity_order_details_failed"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom"
                                        android:layout_marginBottom="@dimen/spacing_twenty_four" />
                                </FrameLayout>
                            </com.kingyon.elevator.uis.widgets.ProportionFrameLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dp_10"
                                android:orientation="vertical">



                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:background="@drawable/ad_order_title"
                                    android:padding="@dimen/dp_10"
                                    android:layout_marginLeft="@dimen/dp5"
                                    android:layout_marginRight="@dimen/dp5"
                                    >

                                    <LinearLayout
                                        style="@style/layout_padding"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/spacing_small"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:paddingLeft="@dimen/spacing_six"
                                            android:paddingRight="@dimen/spacing_six"
                                            android:src="@mipmap/ic_order_user" />

                                        <View
                                            android:layout_width="1dp"
                                            android:layout_height="28dp"
                                            android:layout_marginLeft="@dimen/spacing_default"
                                            android:layout_marginRight="@dimen/spacing_default"
                                            android:visibility="gone"
                                            android:background="#ECECEC" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/dp10"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/tv_auth_name"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:ellipsize="end"
                                                android:maxLines="1"
                                                android:singleLine="true"
                                                android:textColor="#666666"
                                                android:textColorHint="#ABABAB"
                                                android:textSize="@dimen/txt_big_content"
                                                android:textStyle="bold"
                                                tools:text="(餐饮)成都大众实业有限公司" />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginLeft="@dimen/spacing_default"
                                        android:layout_marginTop="@dimen/spacing_two"
                                        android:layout_marginRight="@dimen/spacing_default"
                                        android:background="@drawable/line_dash" />


                                    <android.support.v7.widget.RecyclerView
                                        android:id="@+id/rcv_list"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:nestedScrollingEnabled="false"
                                        android:overScrollMode="never"
                                        />


                                    <LinearLayout
                                        android:id="@+id/ll_sq"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center"
                                        android:padding="@dimen/dp5"
                                        >
                                        <TextView
                                            android:id="@+id/tv_sq"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="展开"
                                            android:textColor="#ff666666"
                                            android:textSize="12sp"
                                            />
                                        <ImageView
                                            android:id="@+id/img_sq"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@mipmap/ic_arrow_down"
                                            android:layout_marginLeft="@dimen/dp5"
                                            />


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:padding="@dimen/dp5"
                                        >

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="下单数量"
                                            android:textColor="#ff999999"
                                            android:textSize="12sp"
                                            />

                                        <TextView
                                            android:layout_weight="1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>

                                        <TextView
                                            android:id="@+id/tv_devices"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text=" 101面屏"
                                            android:textColor="#ff999999"
                                            android:textSize="12sp" />
                                        <TextView
                                            android:id="@+id/ll_devices"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="查看点位明细"
                                            android:textColor="#ff2d6ef2"
                                            android:textSize="12sp"
                                            android:background="@drawable/ad_order_dwmx"
                                            android:padding="@dimen/dp5"
                                            android:layout_marginLeft="@dimen/dp5"
                                            />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:padding="@dimen/dp5"
                                        >

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="金额合计"
                                            android:textColor="#ff999999"
                                            android:textSize="12sp"
                                            />

                                        <TextView
                                            android:layout_weight="1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>

                                        <TextView
                                            android:id="@+id/tv_total"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="200"
                                            android:textColor="#ff999999"
                                            android:textSize="12sp"
                                            />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:padding="@dimen/dp5"
                                        >

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="优惠卷"
                                            android:textColor="#ff999999"
                                            android:textSize="12sp"
                                            />

                                        <TextView
                                            android:layout_weight="1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>

                                        <TextView
                                            android:id="@+id/tv_discount"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="200"
                                            android:textColor="#ff999999"
                                            android:textSize="12sp"
                                            />

                                    </LinearLayout>

                                </LinearLayout>



                                <LinearLayout
                                    android:layout_marginTop="@dimen/dp10"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:background="@mipmap/bg_order_bottom"
                                    android:paddingLeft="@dimen/dp_15"
                                    android:paddingRight="@dimen/dp_15"
                                    >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="实付"
                                        android:textColor="#000000"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        />

                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                    <TextView
                                        android:id="@+id/tv_waitpay_money"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="200"
                                        android:textColor="#FF3049"
                                        android:textSize="14sp"
                                        />

                                </LinearLayout>


                                <LinearLayout
                                    android:layout_marginTop="@dimen/dp5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:background="@mipmap/bg_order_information"
                                    >


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="@dimen/spacing_app_bar"
                                            android:layout_weight="1"
                                            android:drawableLeft="@drawable/ic_order_details"
                                            android:drawablePadding="@dimen/spacing_twelve"
                                            android:gravity="center_vertical"
                                            android:paddingLeft="@dimen/spacing_default"
                                            android:paddingRight="@dimen/spacing_default"
                                            android:text="订单详情"
                                            android:textColor="#666666"
                                            android:textSize="@dimen/txt_big_content"
                                            android:textStyle="bold" />


                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginLeft="@dimen/spacing_default"
                                        android:layout_marginTop="@dimen/spacing_two"
                                        android:layout_marginRight="@dimen/spacing_default"
                                        android:background="@drawable/line_dash" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:paddingTop="@dimen/spacing_small"
                                        android:paddingBottom="@dimen/spacing_small">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:paddingLeft="@dimen/spacing_default"
                                            android:paddingTop="@dimen/spacing_small"
                                            android:paddingRight="@dimen/spacing_default"
                                            android:paddingBottom="@dimen/spacing_small">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_vertical"
                                                android:minWidth="56dp"
                                                android:text="投放类型："
                                                android:textColor="#ff808080"
                                                android:textSize="@dimen/sp_14"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/tv_order_type"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginRight="@dimen/spacing_default"
                                                android:text="商业广告"
                                                android:textColor="#666666"
                                                android:textSize="@dimen/txt_normal_content"
                                                android:textStyle="bold" />
                                        </LinearLayout>


                                        <LinearLayout
                                            android:id="@+id/ll_name"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:paddingLeft="@dimen/spacing_default"
                                            android:paddingTop="@dimen/spacing_small"
                                            android:paddingRight="@dimen/spacing_default"
                                            android:paddingBottom="@dimen/spacing_small">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_vertical"
                                                android:minWidth="56dp"
                                                android:text="广告名称："
                                                android:textColor="#ff808080"
                                                android:textSize="@dimen/sp_14"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/tv_ad_name"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:ellipsize="end"
                                                android:maxLines="1"
                                                android:text="洗发水"
                                                android:textColor="#666666"
                                                android:textSize="@dimen/sp_14"
                                                android:textStyle="bold" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:paddingLeft="@dimen/spacing_default"
                                            android:paddingTop="@dimen/spacing_small"
                                            android:paddingRight="@dimen/spacing_default"
                                            android:visibility="gone"
                                            android:paddingBottom="@dimen/spacing_small">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_vertical"
                                                android:minWidth="56dp"
                                                android:text="屏幕："
                                                android:textColor="#ff808080"
                                                android:textSize="@dimen/sp_14"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:drawableRight="@drawable/ic_plan_cell_right"
                                                android:drawablePadding="@dimen/spacing_four"
                                                android:textColor="#666666"
                                                android:textSize="@dimen/sp_14"
                                                android:textStyle="bold"
                                                tools:text="543面" />
                                        </LinearLayout>


                                        <LinearLayout
                                            android:id="@+id/ll_duration"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:paddingLeft="@dimen/spacing_default"
                                            android:paddingTop="@dimen/spacing_small"
                                            android:paddingRight="@dimen/spacing_default"
                                            android:paddingBottom="@dimen/spacing_small">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_vertical"
                                                android:minWidth="56dp"
                                                android:text="投放时间："
                                                android:textColor="#ff808080"
                                                android:textSize="@dimen/sp_14"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/tv_duration"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                tools:text="2018/11/15 15:00 - 2018/11/16 15:00"
                                                android:textColor="#666666"
                                                android:textSize="@dimen/sp_14"
                                                android:textStyle="bold" />
                                        </LinearLayout>


                                        <LinearLayout
                                            android:id="@+id/ll_pay_time"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:paddingLeft="@dimen/spacing_default"
                                            android:paddingTop="@dimen/spacing_small"
                                            android:paddingRight="@dimen/spacing_default"
                                            android:paddingBottom="@dimen/spacing_small">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_vertical"
                                                android:minWidth="80dp"
                                                android:text="下单时间："
                                                android:textColor="#ff808080"
                                                android:textSize="@dimen/sp_14"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/tv_pay_time"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textColor="#666666"
                                                android:textSize="@dimen/sp_14"
                                                android:textStyle="bold"
                                                tools:text="2018-05-01 16:00" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/ll_sn"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center_vertical"
                                            android:orientation="horizontal"
                                            android:paddingLeft="@dimen/spacing_default"
                                            android:paddingTop="@dimen/spacing_three"
                                            android:paddingRight="@dimen/spacing_default"
                                            android:paddingBottom="@dimen/spacing_three">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_vertical"
                                                android:minWidth="80dp"
                                                android:text="订单编号："
                                                android:textColor="#ff808080"
                                                android:textSize="@dimen/sp_14"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/tv_sn"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:textColor="#666666"
                                                android:textIsSelectable="true"
                                                android:textSize="@dimen/sp_14"
                                                android:textStyle="bold"
                                                tools:text="11977240" />

                                            <TextView
                                                android:id="@+id/tv_copy_sn"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="@dimen/spacing_small"
                                                android:background="@drawable/bg_six_frame_btn"
                                                android:paddingLeft="18dp"
                                                android:paddingTop="@dimen/spacing_six"
                                                android:paddingRight="18dp"
                                                android:paddingBottom="@dimen/spacing_six"
                                                android:text="复制"
                                                android:textColor="#ffababab"
                                                android:textSize="13sp" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/ll_city"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:paddingLeft="@dimen/spacing_default"
                                            android:paddingTop="@dimen/spacing_small"
                                            android:visibility="gone"
                                            android:paddingRight="@dimen/spacing_default"
                                            android:paddingBottom="@dimen/spacing_small">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_vertical"
                                                android:minWidth="56dp"
                                                android:text="地址："
                                                android:textColor="#ff808080"
                                                android:textSize="@dimen/sp_14"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/tv_address"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="成都、北京（3天）"
                                                android:textColor="#666666"
                                                android:textSize="@dimen/sp_14"
                                                android:textStyle="bold" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/ll_pay_way"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:paddingLeft="@dimen/spacing_default"
                                            android:paddingTop="@dimen/spacing_small"
                                            android:paddingRight="@dimen/spacing_default"
                                            android:paddingBottom="@dimen/spacing_small">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_vertical"
                                                android:minWidth="80dp"
                                                android:text="支付方式："
                                                android:textColor="#ff808080"
                                                android:textSize="@dimen/sp_14"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/tv_pay_way"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textColor="#666666"
                                                android:textSize="@dimen/sp_14"
                                                android:textStyle="bold"
                                                tools:text="支付宝" />
                                        </LinearLayout>

                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginLeft="@dimen/spacing_default"
                                        android:layout_marginTop="@dimen/spacing_two"
                                        android:layout_marginRight="@dimen/spacing_default"
                                        android:background="@drawable/line_dash" />

                                </LinearLayout>



                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v4.widget.NestedScrollView>


                    <LinearLayout
                        android:id="@+id/ll_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/spacing_tab_bar">

                            <ImageView
                                android:id="@+id/pre_v_back"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_title_back"
                                android:paddingLeft="@dimen/spacing_twelve"
                                android:paddingRight="@dimen/spacing_twelve"
                                android:src="@drawable/icon_back" />

                            <TextView
                                android:id="@+id/pre_tv_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="订单详情"
                                android:textColor="@color/white_normal"
                                android:textSize="@dimen/txt_big_content"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <View
                            android:id="@+id/v_line"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/spacing_divider" />
                    </LinearLayout>
                </FrameLayout>
            </android.support.v4.widget.SwipeRefreshLayout>

            <LinearLayout
                android:id="@+id/ll_operate"
                android:layout_width="match_parent"
                android:layout_height="58.5dp"
                android:background="@color/white_normal"
                android:orientation="vertical">

                <include layout="@layout/ui_layout_divider" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <include
