<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="35dp"
    android:paddingTop="40dp"
    android:paddingEnd="35dp"
    tools:context=".uis.fragments.user.ResetLoginPasswordFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableEnd="@mipmap/mimachongzhi_xiangxiatubiao"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="+86"
            android:textColor="#ff404040"
            android:textSize="15sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="7dp"
            android:background="#BFBFBF" />

        <EditText
            android:id="@+id/et_input_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@color/white"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@color/default_text_color"
            android:textColorHint="#bfbfbf"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:textColor="@color/default_text_color"
            android:textColorHint="#bfbfbf"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_get_code"
            android:layout_width="70dp"
            android:layout_height="23dp"
            android:background="@drawable/shape_next_btn_bg"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#ffffffff"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_password1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:textColor="@color/default_text_color"
            android:textColorHint="#bfbfbf"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/cat_password1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="20dp"
            android:paddingStart="10dp"
            android:paddingTop="14dp"
            android:paddingEnd="10dp"
            android:paddingBottom="14dp"
            android:src="@mipmap/mimachongzhi_kejiananniuer" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_password2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:textColor="@color/default_text_color"
            android:textColorHint="#bfbfbf"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/cat_password2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="20dp"
            android:paddingStart="10dp"
            android:paddingTop="14dp"
            android:paddingEnd="10dp"
            android:paddingBottom="14dp"
            android:src="@mipmap/mimachongzhi_kejiananniuer" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_next_confirm"
        android:layout_width="274dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="77dp"
        android:background="@drawable/shape_next_btn_bg"
        android:gravity="center"
        android:text="确定"
        android:textColor="#ffffffff"
        android:textSize="15sp" />


</LinearLayout>