<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="35dp"
    android:paddingTop="40dp"
    android:paddingEnd="35dp"
    tools:context=".uis.fragments.user.ResetLoginPasswordFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前账号"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableEnd="@mipmap/mimachongzhi_xiangxiatubiao"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:text="+86"
                android:textColor="#ff404040"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/et_input_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:textColor="#ff404040"
                android:textStyle="bold"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:textColor="@color/default_text_color"
            android:textColorHint="#bfbfbf"
            android:textSize="@dimen/dp_16" />


        <TextView
            android:id="@+id/tv_get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_next_wjmm_bg"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#FF1330"
            android:paddingTop="@dimen/dp5"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:paddingBottom="@dimen/dp5"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_password1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textColor="@color/default_text_color"
            android:textColorHint="#bfbfbf"
            android:textSize="@dimen/dp_16" />

        <ImageView
            android:id="@+id/cat_password1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/dp10"
            android:src="@mipmap/ic_login_password_on" />

    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/dp5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="温馨提示：密码最好采用6-20位的数字、字符组合"
        android:textColor="#ff999999"
        android:textSize="12sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_password2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:textColor="@color/default_text_color"
            android:textColorHint="#bfbfbf"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/cat_password2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="20dp"
            android:paddingStart="10dp"
            android:paddingTop="14dp"
            android:paddingEnd="10dp"
            android:paddingBottom="14dp"
            android:src="@mipmap/ic_login_pasword_off" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_next_confirm"
        android:layout_width="274dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="77dp"
        android:background="@drawable/shape_next_btn_bg"
        android:gravity="center"
        android:text="确定"
        android:textColor="#ffffffff"
        android:textSize="15sp" />


</LinearLayout>