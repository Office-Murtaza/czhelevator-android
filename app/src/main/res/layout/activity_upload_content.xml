<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_normal"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white_normal"
    app:cardCornerRadius="@dimen/spacing_four"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <com.kingyon.elevator.uis.widgets.ProportionFrameLayout
        android:id="@+id/pfl_proportion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:proporty="1.3125">

        <ImageView
            android:id="@+id/img_src"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="@dimen/spacing_default"
            android:layout_height="@dimen/spacing_default"
            android:src="@drawable/ic_upload_delete" />

        <TextView
            android:id="@+id/tv_main_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:height="@dimen/spacing_twenty_four"
            android:background="@color/black_secondary"
            android:gravity="center"
            android:text="主图"
            android:textColor="@color/white_normal"
            android:textSize="@dimen/txt_tips"
            android:visibility="gone" />
    </com.kingyon.elevator.uis.widgets.ProportionFrameLayout>
</android.support.v7.widget.CardView>