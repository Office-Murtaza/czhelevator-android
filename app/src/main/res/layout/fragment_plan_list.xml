<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="@dimen/dp10"
        android:background="@color/white"
        >

        <LinearLayout
            android:id="@+id/ll_xz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/img_select_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check_big"
                />
            <TextView
                android:id="@+id/tv_select_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全选"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_16"
                android:paddingLeft="10dp"
                />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="（0/1）"
                android:textColor="#ff999999"
                android:textSize="14sp"
                android:layout_marginLeft="@dimen/dp_5"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_delete_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_check_big"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="全选(0/1)"
            android:visibility="gone"
            android:textColor="#ff333333"
            android:textSize="@dimen/txt_big_content"
            />

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_folding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="折叠 "
            android:textColor="#ffffffff"
            android:textSize="12sp"
            android:drawableRight="@mipmap/ic_arrow_right_down_w"
            android:background="@drawable/ad_plan_zd"
            android:paddingLeft="@dimen/dp10"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp10"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1E1E1"/>

    <com.leo.afbaselibrary.widgets.StateLayout
        android:id="@+id/stateLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

<!--            <include layout="@layout/fragment_plan_time" />-->

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/pre_refresh"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/pre_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.v4.widget.SwipeRefreshLayout>
        </LinearLayout>
    </com.leo.afbaselibrary.widgets.StateLayout>

    <LinearLayout
        android:id="@+id/ll_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-6dp"
        android:orientation="vertical"
        android:visibility="visible">

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@drawable/bg_plan_operate_shadow" />

        <FrameLayout
            android:id="@+id/fl_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/white_normal"
                android:paddingLeft="@dimen/dp_15"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_toStartOf="@+id/tv_ensure"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_cell_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="覆盖0个小区"
                                android:textColor="#ffababab"
                                android:textSize="@dimen/sp_13" />

                            <View
                                android:layout_width="@dimen/spacing_divider"
                                android:layout_height="10dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@color/black_divider" />

                            <TextView
                                android:id="@+id/tv_screen_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0面屏"
                                android:textColor="#ffababab"
                                android:textSize="@dimen/sp_13" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:layout_marginTop="@dimen/dp10"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="合计"
                                android:textColor="#4A4A4A"
                                android:textSize="@dimen/txt_big_content" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:textColor="#4A4A4A"
                                android:textSize="@dimen/txt_normal_content" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥"
                                android:textColor="#999999"
                                android:textSize="@dimen/txt_normal_content"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.00"
                                android:singleLine="true"
                                android:textColor="#FF3049"
                                android:textSize="@dimen/txt_title"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="元/台/天"
                                android:textColor="#ff999999"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:textSize="12sp"
                                />

                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_ensure"
                        android:layout_width="@dimen/dp_160"
                        android:layout_height="@dimen/dp_40"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:background="@drawable/bg_six_btn"
                        android:gravity="center"
                        android:text="下单"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/txt_big_content"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_delete"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:background="@color/white_normal"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">



                    <TextView
                        android:id="@+id/tv_delete_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已选0个小区"
                        android:layout_marginLeft="@dimen/dp10"
                        android:textColor="#FFABABAB"
                        android:textSize="@dimen/txt_normal_content" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_default"
                    android:layout_marginRight="@dimen/spacing_default"
                    android:background="@drawable/bg_six_btn"
                    android:paddingLeft="@dimen/spacing_twenty_four"
                    android:paddingTop="@dimen/spacing_small"
                    android:paddingRight="@dimen/spacing_twenty_four"
                    android:paddingBottom="@dimen/spacing_small"
                    android:text="删除小区"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/txt_big_content"
                    android:textStyle="bold" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>