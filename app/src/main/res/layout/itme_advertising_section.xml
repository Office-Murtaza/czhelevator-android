<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_200"
        android:layout_margin="@dimen/dp10"
        >

        <com.zhihu.matisse.internal.ui.widget.RoundedRectangleImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:src="@mipmap/bj"
            android:scaleType="centerCrop"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原创"
            android:textColor="#ffffffff"
            android:textSize="10sp"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_5"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/bg_ad_cross"
            android:padding="@dimen/dp_5"
            >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手把手教你绝美的视频拍摄技巧"
                android:textColor="#ffffffff"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOT"
                android:textColor="#ffff3049"
                android:layout_toRightOf="@+id/tv_title"
                android:layout_centerVertical="true"
                android:textSize="10sp"
                android:layout_marginLeft="@dimen/dp10"
                />
        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:gravity="center_vertical"

        >
        <ImageView
            android:id="@+id/img_onetx"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:src="@mipmap/btn_login_qq"
            />
        <TextView
            android:id="@+id/tv_onename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="屏多多官方"
            android:layout_marginLeft="@dimen/dp10"
            android:textColor="#ff333333"
            android:textSize="14sp"
            />

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_one_zpb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 点赞    6 评论    123播放"
            android:textColor="#ffb4b3b3"
            android:textSize="12sp"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/img_twotx"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:src="@mipmap/btn_login_qq"
                />
            <TextView
                android:id="@+id/tv_twoname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="屏多多官方"
                android:layout_marginLeft="@dimen/dp10"
                android:textColor="#ff333333"
                android:textSize="14sp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_two_zpb"
            android:layout_width="150dp"
            android:layout_height="12dp"
            android:text="12 点赞    6 评论    123播放"
            android:textColor="#ffb4b3b3"
            android:textSize="12sp"
            />
    </LinearLayout>

</LinearLayout>