<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smart_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_action_bar"
        app:srlEnableAutoLoadMore="true"
        app:srlEnableRefresh="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_260"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/bg_information"
                    android:scaleType="centerCrop"
                    ></ImageView>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/bg_information_mask"
                    android:layout_alignParentBottom="true"
                    android:scaleType="centerCrop"
                    ></ImageView>

                <RelativeLayout
                    android:id="@+id/rl_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    >


                    <ImageView
                        android:id="@+id/img_top_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_arrow_back_white"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/dp_5"

                        />

                    <TextView
                        android:id="@+id/tv_attention"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已关注"
                        android:textColor="#ffffffff"
                        android:textSize="14sp"
                        android:layout_marginRight="@dimen/dp_40"
                        android:layout_alignEnd="@+id/img_more"
                        android:paddingLeft="@dimen/dp10"
                        android:paddingRight="@dimen/dp10"
                        android:paddingTop="@dimen/dp5"
                        android:paddingBottom="@dimen/dp5"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_uesrcenter_attention"
                        />

                    <ImageView
                        android:id="@+id/img_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_comm_menu_whiteq"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/dp5"
                        android:layout_alignParentRight="true"
                        ></ImageView>

                </RelativeLayout>


                <ImageView
                    android:id="@+id/img_placeholder"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:src="@mipmap/im_head_placeholder"
                    android:layout_below="@+id/rl_top"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_20"
                    ></ImageView>


                <TextView
                    android:id="@+id/tv_name"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="哥曾经是传说"
                    android:textColor="#ffffffff"
                    android:layout_below="@+id/img_placeholder"
                    android:layout_centerHorizontal="true"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/tv_idnumber"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(ID:23455765)"
                    android:textColor="#ffe4e4e4"
                    android:layout_below="@+id/tv_name"
                    android:layout_centerHorizontal="true"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/tv_attention_number"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注   12    |    粉丝   27"
                    android:textColor="#ffffffff"
                    android:textSize="14sp"
                    android:layout_below="@+id/tv_idnumber"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:layout_marginTop="@dimen/dp5"
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="简介：如果可以我还要做大哥"
                    android:textColor="#ffe3e3e3"
                    android:textSize="12sp"
                    android:layout_below="@+id/tv_attention_number"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="全部动态 2 条"
                android:textColor="#ff999999"
                android:textSize="14sp"
                android:background="#F4F4F9"
                android:paddingLeft="@dimen/dp_15"
                android:paddingBottom="@dimen/dp5"
                android:paddingTop="@dimen/dp5"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_attention_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

                <include layout="@layout/layout_error"
                    android:visibility="gone"
                    />
                <include layout="@layout/layout_null"
                    android:visibility="gone"
                    />
                <include layout="@layout/layout_notlogin"
                    android:visibility="gone"
                    />

            </RelativeLayout>


        </LinearLayout>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>