<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_normal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_default">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/spacing_twelve"
            android:layout_marginTop="@dimen/spacing_small"
            android:gravity="center_horizontal"
            android:textColor="#333333"
            android:textSize="@dimen/txt_sub_title"
            android:textStyle="bold"
            tools:text="tv_title" />

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/spacing_twelve"
            android:src="@drawable/ic_dialog_close" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_tab_bar"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/spacing_twelve"
        android:paddingRight="@dimen/spacing_twelve">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_business"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:drawableLeft="@drawable/ic_check_big"
                android:drawablePadding="@dimen/spacing_four"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/spacing_four"
                android:paddingRight="@dimen/spacing_four"
                android:text="商业广告"
                android:textColor="#ff333333"
                android:textSize="@dimen/txt_normal_content" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_diy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_check_big"
                android:drawablePadding="@dimen/spacing_four"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/spacing_four"
                android:paddingRight="@dimen/spacing_four"
                android:text="DIY广告"
                android:textColor="#ff333333"
                android:textSize="@dimen/txt_normal_content" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:drawableLeft="@drawable/ic_check_big"
                android:drawablePadding="@dimen/spacing_four"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/spacing_four"
                android:paddingRight="@dimen/spacing_four"
                android:text="便民信息"
                android:textColor="#ff333333"
                android:textSize="@dimen/txt_normal_content" />
        </FrameLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/et_content"
        style="@style/text_big_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_tab_bar"
        android:layout_marginBottom="@dimen/spacing_default"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="@dimen/spacing_small"
        android:background="@drawable/bg_dialog_edit"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:hint="请输入计划名称"
        android:inputType="text"
        android:maxLines="3"
        android:minLines="3"
        android:singleLine="true"
        android:textColor="#333333"
        android:textColorHint="#999999"
        android:textCursorDrawable="@drawable/cousor_accent"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="@dimen/spacing_small"
        android:layout_marginRight="@dimen/spacing_small"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/spacing_tab_bar"
            android:layout_marginLeft="@dimen/spacing_twelve"
            android:layout_marginRight="@dimen/spacing_twelve"
            android:layout_weight="1"
            android:background="@drawable/bg_cancel_btn"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/white_normal"
            android:textSize="@dimen/txt_big_content"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_ensure"
            android:layout_width="0dp"
            android:layout_height="@dimen/spacing_tab_bar"
            android:layout_marginLeft="@dimen/spacing_twelve"
            android:layout_marginRight="@dimen/spacing_twelve"
            android:layout_weight="1"
            android:background="@drawable/bg_six_btn"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/white_normal"
            android:textSize="@dimen/txt_big_content"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>